<UserControl x:Class="SimpleMoxieSwitcher.Views.KnowledgeQuestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <Storyboard x:Key="QuestGlow">
            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                          From="#00CED1" To="#00FFFF" Duration="0:0:2"
                          RepeatBehavior="Forever" AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid Background="#1A1A1A">
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#2A3F5F" Offset="0.5"/>
                <GradientStop Color="#1A2A3A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#33000000"
                    Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Knowledge Quest"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Foreground="White"/>
                        <TextBlock Text="Embark on learning adventures with Moxie"
                                 FontSize="14"
                                 Foreground="#AAAAAA"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Player Stats -->
                    <Border Grid.Column="1"
                          Background="#22FFFFFF"
                          CornerRadius="15"
                          Padding="20,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0"
                                      Margin="0,0,20,0">
                                <TextBlock Text="{Binding PlayerLevel}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#FFD700"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Level"
                                         FontSize="12"
                                         Foreground="#AAAAAA"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                      Margin="0,0,20,0">
                                <TextBlock Text="{Binding TotalXP}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#00CED1"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="XP"
                                         FontSize="12"
                                         Foreground="#AAAAAA"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{Binding QuestsCompleted}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#2ECC71"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Quests"
                                         FontSize="12"
                                         Foreground="#AAAAAA"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1"
                        VerticalScrollBarVisibility="Auto">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Active Quest -->
                    <Border Grid.Row="0"
                          Background="#33000000"
                          BorderBrush="#00CED1"
                          BorderThickness="2"
                          CornerRadius="20"
                          Padding="30"
                          Margin="0,0,0,30"
                          Visibility="{Binding HasActiveQuest, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource QuestGlow}"/>
                            </EventTrigger>
                        </Border.Triggers>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Quest Icon -->
                            <Border Grid.Column="0"
                                  Width="100"
                                  Height="100"
                                  CornerRadius="50"
                                  Background="{Binding ActiveQuestColor}"
                                  Margin="0,0,30,0">
                                <TextBlock Text="{Binding ActiveQuestIcon}"
                                         FontSize="48"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>

                            <!-- Quest Details -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="ACTIVE QUEST"
                                         FontSize="12"
                                         FontWeight="Bold"
                                         Foreground="#00CED1"
                                         Margin="0,0,0,5"/>

                                <TextBlock Text="{Binding ActiveQuestName}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="White"
                                         Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding ActiveQuestDescription}"
                                         FontSize="14"
                                         Foreground="#AAAAAA"
                                         TextWrapping="Wrap"
                                         Margin="0,0,0,15"/>

                                <!-- Progress Bar -->
                                <Grid>
                                    <ProgressBar Value="{Binding ActiveQuestProgress}"
                                               Maximum="100"
                                               Height="12"
                                               Background="#333333"
                                               Foreground="#00CED1"
                                               CornerRadius="6"/>
                                    <TextBlock Text="{Binding ActiveQuestProgressText}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             FontSize="10"
                                             Foreground="White"/>
                                </Grid>

                                <!-- Objectives -->
                                <ItemsControl ItemsSource="{Binding ActiveQuestObjectives}"
                                            Margin="0,15,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                      Margin="0,3">
                                                <CheckBox IsChecked="{Binding IsCompleted}"
                                                        IsEnabled="False"
                                                        Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Description}"
                                                         Foreground="{Binding TextColor}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Action Button -->
                            <StackPanel Grid.Column="2"
                                      VerticalAlignment="Center">
                                <Button Content="Continue Quest"
                                      Command="{Binding ContinueQuestCommand}"
                                      Style="{StaticResource AccentButtonStyle}"
                                      Padding="20,10"
                                      Margin="0,0,0,10"/>

                                <Button Content="Abandon"
                                      Command="{Binding AbandonQuestCommand}"
                                      Padding="20,10"
                                      Background="#AA4444"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Available Quests -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Available Quests"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding AvailableQuests}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#22FFFFFF"
                                          CornerRadius="15"
                                          Width="350"
                                          Margin="10"
                                          Padding="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Quest Header -->
                                            <Grid Grid.Row="0"
                                                Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                      Width="50"
                                                      Height="50"
                                                      CornerRadius="25"
                                                      Background="{Binding CategoryColor}"
                                                      Margin="0,0,15,0">
                                                    <TextBlock Text="{Binding Icon}"
                                                             FontSize="24"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Name}"
                                                             FontSize="18"
                                                             FontWeight="Bold"
                                                             Foreground="White"/>
                                                    <TextBlock Text="{Binding Category}"
                                                             FontSize="12"
                                                             Foreground="{Binding CategoryColor}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="{Binding XPReward}"
                                                             FontSize="16"
                                                             FontWeight="Bold"
                                                             Foreground="#FFD700"
                                                             HorizontalAlignment="Right"/>
                                                    <TextBlock Text="XP"
                                                             FontSize="10"
                                                             Foreground="#AAAAAA"
                                                             HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Quest Content -->
                                            <StackPanel Grid.Row="1">
                                                <TextBlock Text="{Binding Description}"
                                                         TextWrapping="Wrap"
                                                         Foreground="#AAAAAA"
                                                         Margin="0,0,0,15"/>

                                                <!-- Difficulty -->
                                                <StackPanel Orientation="Horizontal"
                                                          Margin="0,0,0,10">
                                                    <TextBlock Text="Difficulty: "
                                                             Foreground="#666666"/>
                                                    <ItemsControl ItemsSource="{Binding DifficultyStars}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="⭐" FontSize="12"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>

                                                <!-- Duration -->
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="⏱️"
                                                             Foreground="#666666"
                                                             Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding EstimatedTime}"
                                                             Foreground="#666666"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Action Button -->
                                            <Button Grid.Row="2"
                                                  Content="Start Quest"
                                                  Command="{Binding DataContext.StartQuestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  HorizontalAlignment="Stretch"
                                                  Padding="10,8"
                                                  Margin="0,15,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Completed Quests -->
                    <StackPanel Grid.Row="2"
                              Margin="0,40,0,0">
                        <TextBlock Text="Completed Quests"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding CompletedQuests}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1A2ECC71"
                                          BorderBrush="#2ECC71"
                                          BorderThickness="1"
                                          CornerRadius="10"
                                          Padding="15"
                                          Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                     Text="✓"
                                                     FontSize="24"
                                                     Foreground="#2ECC71"
                                                     Margin="0,0,15,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}"
                                                         FontSize="16"
                                                         FontWeight="SemiBold"
                                                         Foreground="White"/>
                                                <TextBlock Text="{Binding CompletedDate}"
                                                         FontSize="12"
                                                         Foreground="#AAAAAA"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2"
                                                      Orientation="Horizontal">
                                                <TextBlock Text="{Binding XPEarned}"
                                                         FontSize="16"
                                                         FontWeight="Bold"
                                                         Foreground="#FFD700"
                                                         Margin="0,0,5,0"/>
                                                <TextBlock Text="XP"
                                                         FontSize="12"
                                                         Foreground="#AAAAAA"
                                                         VerticalAlignment="Bottom"/>

                                                <Button Content="Review"
                                                      Command="{Binding DataContext.ReviewQuestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"
                                                      Padding="10,5"
                                                      Margin="20,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>