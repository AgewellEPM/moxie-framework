<UserControl x:Class="SimpleMoxieSwitcher.Views.ModelSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#1A1A1A">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#2D1B69" Offset="0.5"/>
                <GradientStop Color="#0F3460" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#33000000" Padding="30,20">
                <StackPanel>
                    <TextBlock Text="AI Model Selection" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Choose the AI model that powers Moxie's intelligence"
                             FontSize="14" Foreground="#AAAAAA" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Models Grid -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- Current Model -->
                    <Border Background="#33000000" BorderBrush="#00CED1" BorderThickness="2"
                          CornerRadius="20" Padding="30" Margin="0,0,0,30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="80" Height="80" CornerRadius="40"
                                  Background="#00CED1" Margin="0,0,20,0">
                                <TextBlock Text="⚡" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="CURRENT MODEL" FontSize="12" FontWeight="Bold"
                                         Foreground="#00CED1" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding CurrentModelName}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding CurrentModelDescription}" FontSize="14"
                                         Foreground="#AAAAAA" Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentModelPerformance}" FontSize="18"
                                         FontWeight="Bold" Foreground="#00CED1" HorizontalAlignment="Center"/>
                                <TextBlock Text="Performance" FontSize="12" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Available Models -->
                    <TextBlock Text="Available Models" FontSize="24" FontWeight="Bold"
                             Foreground="White" Margin="0,0,0,20"/>

                    <ItemsControl ItemsSource="{Binding AvailableModels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#22FFFFFF" CornerRadius="15" Padding="25" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="60" Height="60" CornerRadius="30"
                                              Background="{Binding IconBackground}" Margin="0,0,20,0">
                                            <TextBlock Text="{Binding Icon}" FontSize="28"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="{Binding Name}" FontSize="20"
                                                         FontWeight="Bold" Foreground="White"/>
                                                <Border Background="{Binding BadgeColor}" CornerRadius="10"
                                                      Padding="8,2" Margin="10,0,0,0"
                                                      Visibility="{Binding HasBadge, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding BadgeText}" FontSize="11" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Description}" FontSize="14"
                                                     Foreground="#AAAAAA" TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="Speed: " Foreground="#666666" FontSize="12"/>
                                                <ItemsControl ItemsSource="{Binding SpeedStars}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="⭐" FontSize="12"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <TextBlock Text="  Quality: " Foreground="#666666" FontSize="12" Margin="15,0,0,0"/>
                                                <ItemsControl ItemsSource="{Binding QualityStars}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="⭐" FontSize="12"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <ProgressBar Value="{Binding DownloadProgress}" Maximum="100"
                                                       Height="8" Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding StatusText}" FontSize="12"
                                                     Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                                        </StackPanel>

                                        <Button Grid.Column="3" Content="{Binding ActionButtonText}"
                                              Command="{Binding DataContext.ModelActionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}" Padding="15,8" Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Advanced Settings -->
                    <Border Background="#33000000" CornerRadius="20" Padding="30" Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="Advanced Settings" FontSize="20" FontWeight="Bold"
                                     Foreground="White" Margin="0,0,0,20"/>

                            <CheckBox Content="Enable experimental models" IsChecked="{Binding EnableExperimental}"
                                    Foreground="White" Margin="0,0,0,10"/>
                            <CheckBox Content="Auto-update models" IsChecked="{Binding AutoUpdate}"
                                    Foreground="White" Margin="0,0,0,10"/>
                            <CheckBox Content="Use cloud processing when available" IsChecked="{Binding UseCloud}"
                                    Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>