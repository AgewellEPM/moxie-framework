<UserControl x:Class="SimpleMoxieSwitcher.Views.MovementControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#1A1A1A">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Movement Presets -->
            <Border Grid.Column="0" Background="#22000000" BorderBrush="#333333" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Movement Presets" FontSize="20" FontWeight="Bold"
                                 Foreground="White" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding MovementPresets}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.ApplyPresetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding}" Margin="0,5">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="#33FFFFFF" CornerRadius="10" Padding="15">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="24"
                                                                 Margin="0,0,15,0" VerticalAlignment="Center"/>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                                     Foreground="White"/>
                                                            <TextBlock Text="{Binding Description}" FontSize="11"
                                                                     Foreground="#AAAAAA"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Separator Background="#333333" Margin="0,20"/>

                        <!-- Speed Control -->
                        <TextBlock Text="Movement Speed" Foreground="White" Margin="0,0,0,10"/>
                        <Slider Value="{Binding MovementSpeed}" Minimum="0" Maximum="100"
                              TickFrequency="25" TickPlacement="BottomRight"/>

                        <!-- Smoothness -->
                        <TextBlock Text="Smoothness" Foreground="White" Margin="0,20,0,10"/>
                        <Slider Value="{Binding MovementSmoothness}" Minimum="0" Maximum="100"
                              TickFrequency="25" TickPlacement="BottomRight"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Center - Joystick Control -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#22000000" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Manual Control" FontSize="24" FontWeight="Bold"
                                 Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Use the joystick or arrow keys to control Moxie"
                                 Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Joystick Area -->
                <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Width="400" Height="400" CornerRadius="200" Background="#1A000000"
                          BorderBrush="#333333" BorderThickness="2">
                        <Canvas x:Name="JoystickCanvas">
                            <!-- Crosshair -->
                            <Line X1="0" Y1="200" X2="400" Y2="200" Stroke="#222222" StrokeThickness="1"/>
                            <Line X1="200" Y1="0" X2="200" Y2="400" Stroke="#222222" StrokeThickness="1"/>

                            <!-- Joystick Knob -->
                            <Ellipse Width="80" Height="80" Fill="#00CED1"
                                   Canvas.Left="{Binding JoystickX}" Canvas.Top="{Binding JoystickY}">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Canvas>
                    </Border>

                    <!-- Direction Indicators -->
                    <TextBlock Text="↑" FontSize="32" Foreground="#666666" HorizontalAlignment="Center"
                             VerticalAlignment="Top" Margin="0,-50,0,0"/>
                    <TextBlock Text="↓" FontSize="32" Foreground="#666666" HorizontalAlignment="Center"
                             VerticalAlignment="Bottom" Margin="0,0,0,-50"/>
                    <TextBlock Text="←" FontSize="32" Foreground="#666666" HorizontalAlignment="Left"
                             VerticalAlignment="Center" Margin="-50,0,0,0"/>
                    <TextBlock Text="→" FontSize="32" Foreground="#666666" HorizontalAlignment="Right"
                             VerticalAlignment="Center" Margin="0,0,-50,0"/>
                </Grid>

                <!-- Control Buttons -->
                <Border Grid.Row="2" Background="#22000000" Padding="20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Reset Position" Command="{Binding ResetPositionCommand}"
                              Padding="15,8" Margin="5,0"/>
                        <Button Content="Stop All Movement" Command="{Binding StopMovementCommand}"
                              Background="#AA4444" Padding="15,8" Margin="5,0"/>
                        <ToggleButton Content="Auto-Balance" IsChecked="{Binding AutoBalance}"
                                    Padding="15,8" Margin="5,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Right Panel - Position Info -->
            <Border Grid.Column="2" Background="#22000000" BorderBrush="#333333" BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Position Info" FontSize="20" FontWeight="Bold"
                                 Foreground="White" Margin="0,0,0,20"/>

                        <!-- Current Position -->
                        <Border Background="#1A000000" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/><RowDefinition/><RowDefinition/>
                                    <RowDefinition/><RowDefinition/><RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="X:" Foreground="#666666" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PositionX}" Foreground="White"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Y:" Foreground="#666666" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PositionY}" Foreground="White"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Z:" Foreground="#666666" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PositionZ}" Foreground="White"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Pitch:" Foreground="#666666" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Pitch}" Foreground="White"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Yaw:" Foreground="#666666" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Yaw}" Foreground="White"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Roll:" Foreground="#666666" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Roll}" Foreground="White"/>
                            </Grid>
                        </Border>

                        <!-- Movement History -->
                        <TextBlock Text="Recent Movements" Foreground="White" Margin="0,20,0,10"/>
                        <ItemsControl ItemsSource="{Binding MovementHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#11FFFFFF" CornerRadius="5" Padding="10" Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Action}" Foreground="#AAAAAA" FontSize="12"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Time}" Foreground="#666666" FontSize="11"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Safety Status -->
                        <Border Background="{Binding SafetyStatusBackground}" CornerRadius="10"
                              Padding="15" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Safety Status" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding SafetyMessage}" Foreground="White" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>