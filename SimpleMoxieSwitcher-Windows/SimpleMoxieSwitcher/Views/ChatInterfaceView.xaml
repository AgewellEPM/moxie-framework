<Window x:Class="SimpleMoxieSwitcher.Views.ChatInterfaceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AI Chat"
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- Message Bubble Styles -->
        <Style x:Key="UserMessageBubble" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="#0088FF"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="50,5,10,5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>

        <Style x:Key="AssistantMessageBubble" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="#2A2A3E"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="10,5,50,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>

        <!-- Typing Animation -->
        <Storyboard x:Key="TypingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.3" To="1" Duration="0:0:0.6"
                           AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Conversation History -->
        <Border Grid.Column="0" Background="#0F0F1E" BorderThickness="0,0,1,0">
            <Border.BorderBrush>
                <SolidColorBrush Color="#333344" Opacity="0.5"/>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sidebar Header -->
                <Border Grid.Row="0" Background="#1A1A2E" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                 Text="{Binding PersonalityEmoji}"
                                 FontSize="20"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>

                        <TextBlock Grid.Column="1"
                                 Text="Conversations"
                                 Foreground="White"
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"/>

                        <Button Grid.Column="2"
                              Command="{Binding NewConversationCommand}"
                              Background="Transparent"
                              BorderThickness="0">
                            <Path Data="M 0 5 L 10 5 M 5 0 L 5 10"
                                Stroke="White"
                                StrokeThickness="2"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Conversation List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ConversationHistory}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectConversationCommand,
                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalContentAlignment="Stretch">
                                    <Border Padding="15,12"
                                          Background="{Binding IsSelected,
                                                     Converter={StaticResource BoolToBrushConverter},
                                                     ConverterParameter='#3300FFFF|Transparent'}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                     Text="{Binding DisplayName}"
                                                     Foreground="White"
                                                     FontWeight="{Binding IsSelected,
                                                                Converter={StaticResource BoolToFontWeightConverter}}"
                                                     TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Grid.Row="1"
                                                     Text="{Binding Preview}"
                                                     Foreground="#888888"
                                                     FontSize="12"
                                                     TextTrimming="CharacterEllipsis"
                                                     MaxHeight="40"
                                                     TextWrapping="Wrap"
                                                     Margin="0,4,0,0"/>

                                            <TextBlock Grid.Row="2"
                                                     Text="{Binding MessageCountText}"
                                                     Foreground="#666666"
                                                     FontSize="11"
                                                     Margin="0,4,0,0"/>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Bottom Actions -->
                <Border Grid.Row="2" Background="#1A1A2E" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                              Command="{Binding RefreshCommand}"
                              Background="Transparent"
                              BorderThickness="0">
                            <Path Data="M 5 0 A 5 5 0 1 1 5 10"
                                Stroke="White"
                                StrokeThickness="1.5"/>
                        </Button>

                        <Button Grid.Column="2"
                              Content="Close"
                              Click="CloseButton_Click"
                              Foreground="White"
                              Background="Transparent"
                              BorderThickness="0"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main Chat Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Header -->
            <Border Grid.Row="0" Background="#16213E" Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="{Binding CurrentConversationTitle}"
                                 Foreground="White"
                                 FontSize="18"
                                 FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CurrentConversationInfo}"
                                 Foreground="#888888"
                                 FontSize="12"
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Messages Area -->
            <ScrollViewer Grid.Row="1"
                        x:Name="MessagesScrollViewer"
                        VerticalScrollBarVisibility="Auto"
                        Background="#1A1A2E"
                        Padding="20">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- User Message -->
                                <Border Style="{StaticResource UserMessageBubble}"
                                      Visibility="{Binding IsUser,
                                                 Converter={StaticResource BoolToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Content}"
                                                 Foreground="White"
                                                 TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding FormattedTime}"
                                                 Foreground="#CCFFFFFF"
                                                 FontSize="10"
                                                 Margin="0,4,0,0"
                                                 HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>

                                <!-- Assistant Message -->
                                <Border Style="{StaticResource AssistantMessageBubble}"
                                      Visibility="{Binding IsAssistant,
                                                 Converter={StaticResource BoolToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Content}"
                                                 Foreground="White"
                                                 TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding FormattedTime}"
                                                 Foreground="#66FFFFFF"
                                                 FontSize="10"
                                                 Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Typing Indicator -->
                <StackPanel Orientation="Horizontal"
                          Visibility="{Binding IsLoading,
                                     Converter={StaticResource BoolToVisibilityConverter}}"
                          Margin="10,10,0,0">
                    <Border Background="#2A2A3E"
                          CornerRadius="18"
                          Padding="15,10">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#888888" Margin="0,0,5,0">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard Storyboard="{StaticResource TypingAnimation}"/>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <Ellipse Width="8" Height="8" Fill="#888888" Margin="0,0,5,0">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="0.3" To="1" Duration="0:0:0.6"
                                                               AutoReverse="True"
                                                               BeginTime="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <Ellipse Width="8" Height="8" Fill="#888888">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="0.3" To="1" Duration="0:0:0.6"
                                                               AutoReverse="True"
                                                               BeginTime="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <TextBlock Text="Moxie is thinking..."
                                     Foreground="#888888"
                                     FontSize="12"
                                     Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Input Area -->
            <Border Grid.Row="2" Background="#0F0F1E" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Error Message -->
                    <Border Grid.Row="0"
                          Background="#44FF3344"
                          CornerRadius="5"
                          Padding="10"
                          Margin="0,0,0,10"
                          Visibility="{Binding HasError,
                                     Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Path Grid.Column="0"
                                Data="M 5 0 L 10 10 L 0 10 Z"
                                Fill="Orange"
                                Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="1"
                                     Text="{Binding ErrorMessage}"
                                     Foreground="#FFAA88"
                                     FontSize="12"/>

                            <Button Grid.Column="2"
                                  Content="âœ•"
                                  Command="{Binding DismissErrorCommand}"
                                  Background="Transparent"
                                  Foreground="#FFAA88"
                                  BorderThickness="0"/>
                        </Grid>
                    </Border>

                    <!-- Message Input -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                              CornerRadius="12"
                              Background="#2A2A3E"
                              Margin="0,0,12,0">
                            <Grid>
                                <TextBox x:Name="MessageTextBox"
                                       Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                                       AcceptsReturn="True"
                                       TextWrapping="Wrap"
                                       MaxHeight="120"
                                       MinHeight="44"
                                       Background="Transparent"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="12,14"
                                       VerticalContentAlignment="Center"
                                       KeyDown="MessageTextBox_KeyDown"/>

                                <TextBlock Text="Message Moxie..."
                                         Foreground="#666666"
                                         IsHitTestVisible="False"
                                         Padding="12,14"
                                         Visibility="{Binding ElementName=MessageTextBox,
                                                    Path=Text.IsEmpty,
                                                    Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                        </Border>

                        <!-- Send Button -->
                        <Button Grid.Column="1"
                              Command="{Binding SendCommand}"
                              IsEnabled="{Binding CanSend}"
                              Width="40" Height="40"
                              Background="Transparent"
                              BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Ellipse Fill="{Binding IsEnabled,
                                                      RelativeSource={RelativeSource TemplatedParent},
                                                      Converter={StaticResource BoolToBrushConverter},
                                                      ConverterParameter='#0088FF|#333344'}"/>
                                        <Path Data="M 15 20 L 25 20 L 20 15 M 20 15 L 20 25"
                                            Stroke="White"
                                            StrokeThickness="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>