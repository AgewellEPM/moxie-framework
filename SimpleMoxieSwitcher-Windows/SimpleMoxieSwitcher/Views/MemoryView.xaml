<UserControl x:Class="SimpleMoxieSwitcher.Views.MemoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#0A0A0A">
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.5">
                <GradientStop Color="#2A1A5A" Offset="0"/>
                <GradientStop Color="#0A0A0A" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1A000000" Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ðŸ§  Memory Visualization" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Explore what Moxie remembers and learns" FontSize="14"
                                 Foreground="#AAAAAA" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="#22FFFFFF" CornerRadius="15" Padding="15,8" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’¾" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding TotalMemories}" Foreground="#00CED1" FontWeight="Bold"/>
                                <TextBlock Text=" memories" Foreground="#AAAAAA" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Button Content="ðŸ” Search" Command="{Binding SearchCommand}" Padding="15,8" Margin="5,0"/>
                        <Button Content="ðŸ—‚ï¸ Organize" Command="{Binding OrganizeCommand}" Padding="15,8" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Categories -->
                <Border Grid.Column="0" Background="#1A000000" BorderBrush="#333333" BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Memory Categories" FontSize="18" FontWeight="Bold"
                                     Foreground="White" Margin="0,0,0,20"/>

                            <ItemsControl ItemsSource="{Binding MemoryCategories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton GroupName="Category" IsChecked="{Binding IsSelected}"
                                                   Margin="0,5">
                                            <RadioButton.Template>
                                                <ControlTemplate TargetType="RadioButton">
                                                    <Border Background="{Binding BackgroundColor}" CornerRadius="10"
                                                          Padding="15" Cursor="Hand">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="20"
                                                                     Margin="0,0,10,0" VerticalAlignment="Center"/>

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding Description}" FontSize="11"
                                                                         Foreground="#AAAAAA"/>
                                                            </StackPanel>

                                                            <TextBlock Grid.Column="2" Text="{Binding Count}" Foreground="{Binding CountColor}"
                                                                     FontWeight="Bold" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </RadioButton.Template>
                                        </RadioButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Separator Background="#333333" Margin="0,20"/>

                            <!-- Memory Timeline -->
                            <TextBlock Text="Timeline" FontSize="16" FontWeight="Bold"
                                     Foreground="White" Margin="0,0,0,15"/>

                            <ItemsControl ItemsSource="{Binding TimelinePeriods}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsVisible}" Margin="0,5" Foreground="White">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}"/>
                                                <TextBlock Text="{Binding Count, StringFormat=' ({0})'}" Foreground="#666666"/>
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Center - Memory Grid/Timeline -->
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Memories}" Margin="30">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectMemoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="{Binding}" Margin="0,10" HorizontalAlignment="Stretch">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="#22FFFFFF" CornerRadius="15" Padding="20">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Memory Icon/Visual -->
                                                    <Border Grid.Column="0" Width="60" Height="60" CornerRadius="30"
                                                          Background="{Binding CategoryColor}" Margin="0,0,20,0">
                                                        <TextBlock Text="{Binding Icon}" FontSize="28"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>

                                                    <!-- Memory Details -->
                                                    <StackPanel Grid.Column="1">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"
                                                                     Foreground="White"/>
                                                            <Border Background="{Binding ImportanceColor}" CornerRadius="10"
                                                                  Padding="5,2" Margin="10,0,0,0"
                                                                  Visibility="{Binding IsImportant, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBlock Text="Important" FontSize="10" Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>

                                                        <TextBlock Text="{Binding Description}" FontSize="14" Foreground="#AAAAAA"
                                                                 TextWrapping="Wrap" Margin="0,5,0,0"/>

                                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                            <TextBlock Text="ðŸ“…" FontSize="12" Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding Date}" FontSize="12" Foreground="#666666"/>
                                                            <TextBlock Text=" â€¢ " Foreground="#666666" Margin="5,0"/>
                                                            <TextBlock Text="ðŸ”—" FontSize="12" Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding ConnectionCount, StringFormat='{}{0} connections'}"
                                                                     FontSize="12" Foreground="#666666"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- Memory Strength -->
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock Text="Strength" FontSize="11" Foreground="#AAAAAA"
                                                                 HorizontalAlignment="Center"/>
                                                        <ProgressBar Value="{Binding Strength}" Maximum="100"
                                                                   Width="80" Height="6" Foreground="{Binding StrengthColor}"
                                                                   Background="#333333" Margin="0,5,0,0"/>
                                                        <TextBlock Text="{Binding Strength, StringFormat='{}{0}%'}" FontSize="12"
                                                                 Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <Border Visibility="{Binding NoMemories, Converter={StaticResource BoolToVisibilityConverter}}"
                          Background="#22FFFFFF" CornerRadius="20" Padding="60"
                          HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="ðŸ§ " FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="No Memories Yet" FontSize="24" FontWeight="Bold"
                                     Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Moxie will start creating memories as you interact"
                                     Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </ScrollViewer>

                <!-- Right Panel - Memory Details -->
                <Border Grid.Column="2" Background="#1A000000" BorderBrush="#333333" BorderThickness="1,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20" Visibility="{Binding HasSelectedMemory, Converter={StaticResource BoolToVisibilityConverter}}">
                            <!-- Selected Memory Header -->
                            <Border Background="#22FFFFFF" CornerRadius="15" Padding="20" Margin="0,0,0,20">
                                <StackPanel>
                                    <Border Width="80" Height="80" CornerRadius="40"
                                          Background="{Binding SelectedMemoryColor}"
                                          HorizontalAlignment="Center" Margin="0,0,0,15">
                                        <TextBlock Text="{Binding SelectedMemoryIcon}" FontSize="36"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="{Binding SelectedMemoryTitle}" FontSize="20" FontWeight="Bold"
                                             Foreground="White" TextAlignment="Center" TextWrapping="Wrap"/>

                                    <TextBlock Text="{Binding SelectedMemoryDate}" FontSize="12" Foreground="#AAAAAA"
                                             HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Memory Content -->
                            <Border Background="#1A000000" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                                <TextBlock Text="{Binding SelectedMemoryContent}" TextWrapping="Wrap"
                                         Foreground="White" LineHeight="20"/>
                            </Border>

                            <!-- Memory Metadata -->
                            <TextBlock Text="Details" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                            <Border Background="#1A000000" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Category:" Foreground="#666666" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedMemoryCategory}" Foreground="White"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Created:" Foreground="#666666" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedMemoryCreated}" Foreground="White"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Access:" Foreground="#666666" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedMemoryLastAccess}" Foreground="White"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Access Count:" Foreground="#666666" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedMemoryAccessCount}" Foreground="White"/>
                                </Grid>
                            </Border>

                            <!-- Related Memories -->
                            <TextBlock Text="Related Memories" FontSize="16" FontWeight="Bold"
                                     Foreground="White" Margin="0,0,0,10"/>

                            <ItemsControl ItemsSource="{Binding RelatedMemories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.SelectMemoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}" HorizontalAlignment="Stretch"
                                              Background="Transparent" BorderThickness="0" Padding="0" Margin="0,3">
                                            <Border Background="#1A000000" CornerRadius="8" Padding="10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Border Grid.Column="0" Width="30" Height="30" CornerRadius="15"
                                                          Background="{Binding Color}" Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding Icon}" FontSize="14"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Title}" FontSize="13" Foreground="White"/>
                                                        <TextBlock Text="{Binding Date}" FontSize="10" Foreground="#666666"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Actions -->
                            <StackPanel Margin="0,20,0,0">
                                <Button Content="ðŸ“Œ Pin Memory" Command="{Binding PinMemoryCommand}"
                                      HorizontalAlignment="Stretch" Padding="10" Margin="0,0,0,10"/>
                                <Button Content="ðŸ”— View Connections" Command="{Binding ViewConnectionsCommand}"
                                      HorizontalAlignment="Stretch" Padding="10" Margin="0,0,0,10"/>
                                <Button Content="ðŸ—‘ï¸ Delete Memory" Command="{Binding DeleteMemoryCommand}"
                                      HorizontalAlignment="Stretch" Padding="10" Background="#AA4444"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Empty Selection State -->
                        <StackPanel Margin="20" VerticalAlignment="Center"
                                  Visibility="{Binding NoMemorySelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Select a memory to view details" FontSize="14" Foreground="#666666"
                                     TextAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>