<UserControl x:Class="SimpleMoxieSwitcher.Views.AppearanceCustomizationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <Storyboard x:Key="NeonPulse">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.3" To="1" Duration="0:0:2"
                           RepeatBehavior="Forever" AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid Background="#1A1A1A">
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#2D1B69" Offset="0.5"/>
                <GradientStop Color="#0F3460" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Glassmorphism Overlay -->
        <Border Background="#22FFFFFF"
                CornerRadius="20"
                Margin="20">
            <Border.Effect>
                <BlurEffect Radius="10"/>
            </Border.Effect>
        </Border>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#33000000"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                             Text="ðŸŽ¨"
                             FontSize="32"
                             VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1"
                              Margin="15,0,0,0">
                        <TextBlock Text="Appearance Customization"
                                 FontSize="28"
                                 FontWeight="Bold"
                                 Foreground="White"/>
                        <TextBlock Text="Customize Moxie's look and personality"
                                 FontSize="14"
                                 Foreground="#AAAAAA"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="2"
                          Content="Reset to Default"
                          Style="{StaticResource AccentButtonStyle}"
                          Padding="15,8"
                          Command="{Binding ResetToDefaultCommand}"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - 3D Model Preview -->
                <Border Grid.Column="0"
                      Background="#33000000"
                      CornerRadius="15"
                      Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 3D Viewport -->
                        <Border Grid.Row="0"
                              Background="#1A000000"
                              CornerRadius="10"
                              Margin="15">
                            <Grid>
                                <Viewport3D x:Name="ModelViewport">
                                    <Viewport3D.Camera>
                                        <PerspectiveCamera Position="0,0,5"
                                                         LookDirection="0,0,-1"
                                                         FieldOfView="60"/>
                                    </Viewport3D.Camera>
                                    <ModelVisual3D>
                                        <ModelVisual3D.Content>
                                            <Model3DGroup>
                                                <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                                                <AmbientLight Color="#404040"/>
                                            </Model3DGroup>
                                        </ModelVisual3D.Content>
                                    </ModelVisual3D>
                                </Viewport3D>

                                <!-- Placeholder for 3D Model -->
                                <TextBlock Text="3D Model Preview"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         FontSize="18"
                                         Foreground="#666666"/>
                            </Grid>
                        </Border>

                        <!-- Rotation Controls -->
                        <StackPanel Grid.Row="1"
                                  Margin="15"
                                  Spacing="10">
                            <TextBlock Text="Model Rotation"
                                     FontWeight="SemiBold"
                                     Foreground="White"/>
                            <Slider Value="{Binding ModelRotation}"
                                  Minimum="0"
                                  Maximum="360"
                                  TickFrequency="45"/>

                            <CheckBox Content="Auto-rotate"
                                    IsChecked="{Binding AutoRotate}"
                                    Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Right Panel - Customization Options -->
                <ScrollViewer Grid.Column="1"
                            VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10,0,0,0"
                              Spacing="20">

                        <!-- Color Scheme -->
                        <Border Background="#33000000"
                              CornerRadius="15"
                              Padding="20">
                            <StackPanel Spacing="15">
                                <TextBlock Text="Color Scheme"
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="White"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <RadioButton Grid.Column="0"
                                               GroupName="ColorScheme"
                                               IsChecked="{Binding IsDefaultColor}">
                                        <Border Width="80"
                                              Height="80"
                                              CornerRadius="10"
                                              Background="#00CED1"/>
                                    </RadioButton>

                                    <RadioButton Grid.Column="1"
                                               GroupName="ColorScheme"
                                               IsChecked="{Binding IsPurpleColor}">
                                        <Border Width="80"
                                              Height="80"
                                              CornerRadius="10"
                                              Background="#9B59B6"/>
                                    </RadioButton>

                                    <RadioButton Grid.Column="2"
                                               GroupName="ColorScheme"
                                               IsChecked="{Binding IsGreenColor}">
                                        <Border Width="80"
                                              Height="80"
                                              CornerRadius="10"
                                              Background="#2ECC71"/>
                                    </RadioButton>

                                    <RadioButton Grid.Column="3"
                                               GroupName="ColorScheme"
                                               IsChecked="{Binding IsCustomColor}">
                                        <Border Width="80"
                                              Height="80"
                                              CornerRadius="10">
                                            <Border.Background>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="#FF1493" Offset="0"/>
                                                    <GradientStop Color="#00BFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </RadioButton>
                                </Grid>

                                <!-- Custom Color Picker -->
                                <Grid Visibility="{Binding CustomColorVisibility}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                             Text="Primary Color:"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             Margin="0,0,10,0"/>

                                    <ui:ColorPicker Grid.Column="1"
                                                  Color="{Binding PrimaryColor}"
                                                  IsAlphaEnabled="False"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Face Expressions -->
                        <Border Background="#33000000"
                              CornerRadius="15"
                              Padding="20">
                            <StackPanel Spacing="15">
                                <TextBlock Text="Face Expressions"
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="White"/>

                                <WrapPanel>
                                    <Border Width="100"
                                          Height="100"
                                          CornerRadius="10"
                                          Background="#1A000000"
                                          Margin="5"
                                          BorderBrush="{Binding HappyBorderBrush}"
                                          BorderThickness="2">
                                        <Button Command="{Binding SelectExpressionCommand}"
                                              CommandParameter="Happy"
                                              Background="Transparent"
                                              BorderThickness="0">
                                            <TextBlock Text="ðŸ˜Š" FontSize="40"/>
                                        </Button>
                                    </Border>

                                    <Border Width="100"
                                          Height="100"
                                          CornerRadius="10"
                                          Background="#1A000000"
                                          Margin="5"
                                          BorderBrush="{Binding SadBorderBrush}"
                                          BorderThickness="2">
                                        <Button Command="{Binding SelectExpressionCommand}"
                                              CommandParameter="Sad"
                                              Background="Transparent"
                                              BorderThickness="0">
                                            <TextBlock Text="ðŸ˜¢" FontSize="40"/>
                                        </Button>
                                    </Border>

                                    <Border Width="100"
                                          Height="100"
                                          CornerRadius="10"
                                          Background="#1A000000"
                                          Margin="5"
                                          BorderBrush="{Binding ExcitedBorderBrush}"
                                          BorderThickness="2">
                                        <Button Command="{Binding SelectExpressionCommand}"
                                              CommandParameter="Excited"
                                              Background="Transparent"
                                              BorderThickness="0">
                                            <TextBlock Text="ðŸ¤©" FontSize="40"/>
                                        </Button>
                                    </Border>

                                    <Border Width="100"
                                          Height="100"
                                          CornerRadius="10"
                                          Background="#1A000000"
                                          Margin="5"
                                          BorderBrush="{Binding ThinkingBorderBrush}"
                                          BorderThickness="2">
                                        <Button Command="{Binding SelectExpressionCommand}"
                                              CommandParameter="Thinking"
                                              Background="Transparent"
                                              BorderThickness="0">
                                            <TextBlock Text="ðŸ¤”" FontSize="40"/>
                                        </Button>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Voice Settings -->
                        <Border Background="#33000000"
                              CornerRadius="15"
                              Padding="20">
                            <StackPanel Spacing="15">
                                <TextBlock Text="Voice Settings"
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="White"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                             Text="Pitch:"
                                             VerticalAlignment="Center"
                                             Foreground="White"/>
                                    <Slider Grid.Row="0" Grid.Column="1"
                                          Value="{Binding VoicePitch}"
                                          Minimum="0.5"
                                          Maximum="2.0"
                                          TickFrequency="0.1"
                                          Margin="10,0"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2"
                                             Text="{Binding VoicePitch, StringFormat='{}{0:F1}'}"
                                             VerticalAlignment="Center"
                                             Foreground="White"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                             Text="Speed:"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             Margin="0,10,0,0"/>
                                    <Slider Grid.Row="1" Grid.Column="1"
                                          Value="{Binding VoiceSpeed}"
                                          Minimum="0.5"
                                          Maximum="2.0"
                                          TickFrequency="0.1"
                                          Margin="10,10,10,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2"
                                             Text="{Binding VoiceSpeed, StringFormat='{}{0:F1}'}"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             Margin="0,10,0,0"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                             Text="Emotion:"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             Margin="0,10,0,0"/>
                                    <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                            SelectedItem="{Binding VoiceEmotion}"
                                            Margin="10,10,0,0">
                                        <ComboBoxItem>Neutral</ComboBoxItem>
                                        <ComboBoxItem>Cheerful</ComboBoxItem>
                                        <ComboBoxItem>Calm</ComboBoxItem>
                                        <ComboBoxItem>Excited</ComboBoxItem>
                                        <ComboBoxItem>Gentle</ComboBoxItem>
                                    </ComboBox>
                                </Grid>

                                <Button Content="Test Voice"
                                      HorizontalAlignment="Left"
                                      Padding="15,8"
                                      Command="{Binding TestVoiceCommand}"/>
                            </StackPanel>
                        </Border>

                        <!-- Animation Style -->
                        <Border Background="#33000000"
                              CornerRadius="15"
                              Padding="20">
                            <StackPanel Spacing="15">
                                <TextBlock Text="Animation Style"
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="White"/>

                                <RadioButton Content="Energetic - Quick, bouncy movements"
                                           IsChecked="{Binding IsEnergeticAnimation}"
                                           Foreground="White"/>
                                <RadioButton Content="Calm - Smooth, gentle movements"
                                           IsChecked="{Binding IsCalmAnimation}"
                                           Foreground="White"/>
                                <RadioButton Content="Playful - Fun, exaggerated movements"
                                           IsChecked="{Binding IsPlayfulAnimation}"
                                           Foreground="White"/>
                                <RadioButton Content="Focused - Minimal, precise movements"
                                           IsChecked="{Binding IsFocusedAnimation}"
                                           Foreground="White"/>
                            </StackPanel>
                        </Border>

                        <!-- Save/Cancel Buttons -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1"
                                  Content="Cancel"
                                  Padding="20,10"
                                  Margin="0,0,10,0"
                                  Command="{Binding CancelCommand}"/>

                            <Button Grid.Column="2"
                                  Content="Save Changes"
                                  Style="{StaticResource AccentButtonStyle}"
                                  Padding="20,10"
                                  Command="{Binding SaveCommand}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00CED1" Offset="0"/>
                                        <GradientStop Color="#00FFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>