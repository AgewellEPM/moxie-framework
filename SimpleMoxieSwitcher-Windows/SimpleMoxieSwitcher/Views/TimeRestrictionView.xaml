<UserControl x:Class="SimpleMoxieSwitcher.Views.TimeRestrictionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#1A1A1A">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#2C3E50" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <!-- Header -->
                <TextBlock Text="â° Time Restrictions" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Manage screen time and usage schedules" FontSize="14"
                         Foreground="#AAAAAA" Margin="0,5,0,30"/>

                <!-- Daily Time Limits -->
                <Border Background="#22FFFFFF" CornerRadius="20" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Daily Time Limits" FontSize="20" FontWeight="Bold"
                                 Foreground="White" Margin="0,0,0,20"/>

                        <ToggleButton IsChecked="{Binding EnableTimeLimits}" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Enable Daily Limits" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding TimeLimitStatus}" Foreground="#00CED1"/>
                            </StackPanel>
                        </ToggleButton>

                        <Grid Margin="0,20,0,0" IsEnabled="{Binding EnableTimeLimits}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/><RowDefinition/><RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Weekdays:" VerticalAlignment="Center" Foreground="White"/>
                            <Slider Grid.Row="0" Grid.Column="1" Value="{Binding WeekdayLimit}" Minimum="0" Maximum="240"
                                  TickFrequency="30" TickPlacement="BottomRight" Margin="10,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding WeekdayLimitText}" VerticalAlignment="Center" Foreground="White"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Weekends:" VerticalAlignment="Center" Foreground="White" Margin="0,15,0,0"/>
                            <Slider Grid.Row="1" Grid.Column="1" Value="{Binding WeekendLimit}" Minimum="0" Maximum="240"
                                  TickFrequency="30" TickPlacement="BottomRight" Margin="10,15,10,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding WeekendLimitText}" VerticalAlignment="Center" Foreground="White" Margin="0,15,0,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Warning at:" VerticalAlignment="Center" Foreground="White" Margin="0,15,0,0"/>
                            <Slider Grid.Row="2" Grid.Column="1" Value="{Binding WarningTime}" Minimum="5" Maximum="30"
                                  TickFrequency="5" TickPlacement="BottomRight" Margin="10,15,10,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding WarningTimeText}" VerticalAlignment="Center" Foreground="White" Margin="0,15,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Schedule Restrictions -->
                <Border Background="#22FFFFFF" CornerRadius="20" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Schedule Restrictions" FontSize="20" FontWeight="Bold"
                                 Foreground="White" Margin="0,0,0,20"/>

                        <ToggleButton IsChecked="{Binding EnableSchedule}" HorizontalAlignment="Left" Margin="0,0,0,20">
                            <TextBlock Text="Enable Schedule Restrictions"/>
                        </ToggleButton>

                        <ItemsControl ItemsSource="{Binding ScheduleRules}" IsEnabled="{Binding EnableSchedule}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1A000000" CornerRadius="10" Padding="15" Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}" Margin="0,0,15,0" VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding DayRange}" FontWeight="Bold" Foreground="White"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock Text="Allowed: " Foreground="#AAAAAA"/>
                                                    <TextBlock Text="{Binding StartTime}" Foreground="#00CED1"/>
                                                    <TextBlock Text=" to " Foreground="#AAAAAA"/>
                                                    <TextBlock Text="{Binding EndTime}" Foreground="#00CED1"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <Button Grid.Column="2" Content="Edit" Command="{Binding EditCommand}"
                                                  Padding="10,5" Background="#666666"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="+ Add Schedule Rule" Command="{Binding AddScheduleRuleCommand}"
                              HorizontalAlignment="Left" Padding="15,8" Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Bedtime Settings -->
                <Border Background="#22FFFFFF" CornerRadius="20" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Bedtime Settings" FontSize="20" FontWeight="Bold"
                                 Foreground="White" Margin="0,0,0,20"/>

                        <ToggleButton IsChecked="{Binding EnableBedtime}" HorizontalAlignment="Left" Margin="0,0,0,20">
                            <TextBlock Text="Enable Bedtime Mode"/>
                        </ToggleButton>

                        <Grid IsEnabled="{Binding EnableBedtime}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/><RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="School Nights:" Foreground="White" Margin="0,0,0,5"/>
                            <Border Grid.Row="1" Grid.Column="0" Background="#33FFFFFF" CornerRadius="10" Padding="10" Margin="0,0,10,0">
                                <TextBlock Text="{Binding SchoolNightBedtime}" HorizontalAlignment="Center" Foreground="White" FontSize="18"/>
                            </Border>

                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Weekends:" Foreground="White" Margin="0,0,0,5"/>
                            <Border Grid.Row="1" Grid.Column="1" Background="#33FFFFFF" CornerRadius="10" Padding="10">
                                <TextBlock Text="{Binding WeekendBedtime}" HorizontalAlignment="Center" Foreground="White" FontSize="18"/>
                            </Border>
                        </Grid>

                        <CheckBox Content="Wind down mode (30 min before bedtime)" IsChecked="{Binding EnableWindDown}"
                                IsEnabled="{Binding EnableBedtime}" Foreground="White" Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Break Time Settings -->
                <Border Background="#22FFFFFF" CornerRadius="20" Padding="30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Break Time Reminders" FontSize="20" FontWeight="Bold"
                                 Foreground="White" Margin="0,0,0,20"/>

                        <ToggleButton IsChecked="{Binding EnableBreaks}" HorizontalAlignment="Left" Margin="0,0,0,20">
                            <TextBlock Text="Enable Break Reminders"/>
                        </ToggleButton>

                        <Grid IsEnabled="{Binding EnableBreaks}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/><RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Remind every:" VerticalAlignment="Center" Foreground="White"/>
                            <Slider Grid.Row="0" Grid.Column="1" Value="{Binding BreakInterval}" Minimum="15" Maximum="120"
                                  TickFrequency="15" Margin="10,0,0,0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Break duration:" VerticalAlignment="Center" Foreground="White" Margin="0,15,0,0"/>
                            <Slider Grid.Row="1" Grid.Column="1" Value="{Binding BreakDuration}" Minimum="5" Maximum="30"
                                  TickFrequency="5" Margin="10,15,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Save Button -->
                <Button Content="Save Time Restrictions" Command="{Binding SaveCommand}"
                      Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right"
                      Padding="30,15" FontSize="16"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>