<UserControl x:Class="SimpleMoxieSwitcher.Views.LearningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#1A1A1A">
        <!-- Background Gradient -->
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.5">
                <GradientStop Color="#2A3F5F" Offset="0"/>
                <GradientStop Color="#1A1A1A" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#33000000"
                    Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Learning Hub"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Foreground="White"/>
                        <TextBlock Text="Track progress and explore learning opportunities"
                                 FontSize="14"
                                 Foreground="#AAAAAA"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Overall Stats -->
                    <Border Grid.Column="1"
                          Background="#22FFFFFF"
                          CornerRadius="15"
                          Padding="20,10">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="{Binding TotalHours}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#00CED1"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Hours"
                                         FontSize="12"
                                         Foreground="#AAAAAA"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="{Binding SkillsLearned}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#FFD700"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Skills"
                                         FontSize="12"
                                         Foreground="#AAAAAA"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="{Binding CurrentLevel}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#2ECC71"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Level"
                                         FontSize="12"
                                         Foreground="#AAAAAA"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1"
                        VerticalScrollBarVisibility="Auto">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Learning Progress Overview -->
                    <Border Grid.Row="0"
                          Background="#33000000"
                          CornerRadius="20"
                          Padding="30"
                          Margin="0,0,0,30">
                        <StackPanel>
                            <TextBlock Text="Weekly Progress"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,20"/>

                            <!-- Progress Chart -->
                            <Border Background="#1A000000"
                                  CornerRadius="10"
                                  Height="200"
                                  Padding="20">
                                <Grid>
                                    <!-- Placeholder for chart -->
                                    <ItemsControl ItemsSource="{Binding WeeklyProgressBars}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="1" Columns="7"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Border Grid.Row="0"
                                                          Background="#333333"
                                                          CornerRadius="5"
                                                          VerticalAlignment="Bottom"
                                                          Height="{Binding Height}">
                                                        <Border Background="{Binding Color}"
                                                              CornerRadius="5"
                                                              VerticalAlignment="Bottom"
                                                              Height="{Binding FilledHeight}"/>
                                                    </Border>

                                                    <TextBlock Grid.Row="1"
                                                             Text="{Binding Day}"
                                                             HorizontalAlignment="Center"
                                                             Foreground="#AAAAAA"
                                                             FontSize="12"
                                                             Margin="0,5,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>

                            <!-- Streak Counter -->
                            <Border Background="#22FFFFFF"
                                  CornerRadius="10"
                                  Padding="15"
                                  Margin="0,20,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                             Text="ðŸ”¥"
                                             FontSize="32"
                                             VerticalAlignment="Center"
                                             Margin="0,0,15,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding StreakDays, StringFormat='{}Current Streak: {0} days'}"
                                                 FontSize="16"
                                                 FontWeight="Bold"
                                                 Foreground="White"/>
                                        <TextBlock Text="{Binding BestStreak, StringFormat='{}Best: {0} days'}"
                                                 FontSize="12"
                                                 Foreground="#AAAAAA"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                             Text="{Binding NextMilestone}"
                                             FontSize="14"
                                             Foreground="#FFD700"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Subject Progress Cards -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Subject Progress"
                                 FontSize="20"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding SubjectProgress}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#22FFFFFF"
                                          CornerRadius="15"
                                          Width="250"
                                          Margin="10"
                                          Padding="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Icon and Title -->
                                            <StackPanel Grid.Row="0"
                                                      Orientation="Horizontal"
                                                      Margin="0,0,0,15">
                                                <TextBlock Text="{Binding Icon}"
                                                         FontSize="24"
                                                         Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Subject}"
                                                         FontSize="18"
                                                         FontWeight="Bold"
                                                         Foreground="White"
                                                         VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Progress Bar -->
                                            <Grid Grid.Row="1"
                                                Margin="0,0,0,10">
                                                <ProgressBar Value="{Binding Progress}"
                                                           Maximum="100"
                                                           Height="8"
                                                           Background="#333333"
                                                           Foreground="{Binding ProgressColor}"/>
                                                <TextBlock Text="{Binding Progress, StringFormat='{}{0}%'}"
                                                         HorizontalAlignment="Right"
                                                         FontSize="11"
                                                         Foreground="White"
                                                         Margin="0,-15,0,0"/>
                                            </Grid>

                                            <!-- Stats -->
                                            <Grid Grid.Row="2"
                                                Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding LessonsCompleted}"
                                                             FontSize="16"
                                                             FontWeight="Bold"
                                                             Foreground="#00CED1"
                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Lessons"
                                                             FontSize="10"
                                                             Foreground="#AAAAAA"
                                                             HorizontalAlignment="Center"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding HoursSpent}"
                                                             FontSize="16"
                                                             FontWeight="Bold"
                                                             Foreground="#FFD700"
                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Hours"
                                                             FontSize="10"
                                                             Foreground="#AAAAAA"
                                                             HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Action Button -->
                                            <Button Grid.Row="3"
                                                  Content="Continue Learning"
                                                  Command="{Binding DataContext.ContinueSubjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  HorizontalAlignment="Stretch"
                                                  Padding="8,5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Achievements -->
                    <StackPanel Grid.Row="2"
                              Margin="0,30,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                     Text="Recent Achievements"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Foreground="White"/>

                            <Button Grid.Column="1"
                                  Content="View All"
                                  Command="{Binding ViewAllAchievementsCommand}"
                                  Padding="15,5"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding RecentAchievements}"
                                    Margin="0,20,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1A000000"
                                          BorderBrush="{Binding RarityColor}"
                                          BorderThickness="2"
                                          CornerRadius="10"
                                          Width="120"
                                          Height="120"
                                          Margin="10,0"
                                          Padding="10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                     Text="{Binding Icon}"
                                                     FontSize="48"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>

                                            <TextBlock Grid.Row="1"
                                                     Text="{Binding Name}"
                                                     FontSize="11"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     TextAlignment="Center"
                                                     TextWrapping="Wrap"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Recommended Next Steps -->
                    <Border Grid.Row="3"
                          Background="#33000000"
                          CornerRadius="20"
                          Padding="30"
                          Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="Recommended Next Steps"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,20"/>

                            <ItemsControl ItemsSource="{Binding NextSteps}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.StartActivityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              HorizontalAlignment="Stretch"
                                              HorizontalContentAlignment="Left"
                                              Background="#22FFFFFF"
                                              BorderThickness="0"
                                              Padding="15"
                                              Margin="0,5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                      Width="40"
                                                      Height="40"
                                                      CornerRadius="20"
                                                      Background="{Binding Color}"
                                                      Margin="0,0,15,0">
                                                    <TextBlock Text="{Binding Icon}"
                                                             FontSize="20"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}"
                                                             FontSize="16"
                                                             FontWeight="SemiBold"
                                                             Foreground="White"/>
                                                    <TextBlock Text="{Binding Description}"
                                                             FontSize="12"
                                                             Foreground="#AAAAAA"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="{Binding Duration}"
                                                             FontSize="12"
                                                             Foreground="#666666"
                                                             HorizontalAlignment="Right"/>
                                                    <TextBlock Text="{Binding Points, StringFormat='+{0} XP'}"
                                                             FontSize="14"
                                                             Foreground="#FFD700"
                                                             FontWeight="Bold"
                                                             HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>