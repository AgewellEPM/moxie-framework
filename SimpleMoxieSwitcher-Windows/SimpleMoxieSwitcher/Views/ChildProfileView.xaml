<Window x:Class="SimpleMoxieSwitcher.Views.ChildProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Child Profile"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- Profile Section Style -->
        <Style x:Key="ProfileSection" TargetType="Border">
            <Setter Property="Background" Value="#2A2A3E"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Avatar Style -->
        <Style x:Key="AvatarButton" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"
                                   Stroke="{TemplateBinding BorderBrush}"
                                   StrokeThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Avatar -->
        <Border Grid.Row="0" Padding="30">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#0F0F1E" Offset="0"/>
                    <GradientStop Color="#1A1A33" Offset="0.5"/>
                    <GradientStop Color="#0F0F1E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar Selection -->
                <Grid Grid.Column="0">
                    <Ellipse Width="100" Height="100"
                           Fill="#3A3A4E"/>
                    <TextBlock Text="{Binding SelectedAvatar}"
                             FontSize="48"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                    <Button Command="{Binding ChangeAvatarCommand}"
                          Width="30" Height="30"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Bottom"
                          Background="#00FFFF"
                          BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Ellipse Fill="{TemplateBinding Background}">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#00FFFF" BlurRadius="10" Opacity="0.8" ShadowDepth="0"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="✏"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="#1A1A2E"
                                             FontWeight="Bold"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Profile Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30,0,0,0">
                    <TextBlock Text="{Binding ChildName}"
                             Foreground="White"
                             FontSize="32"
                             FontWeight="Bold"/>
                    <TextBlock Foreground="#888888"
                             FontSize="16"
                             Margin="0,8,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Age {0} • Profile created {1}">
                                <Binding Path="Age"/>
                                <Binding Path="ProfileCreatedDate"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="2"
                      Content="✕"
                      Click="CloseButton_Click"
                      Width="30" Height="30"
                      Background="Transparent"
                      Foreground="White"
                      BorderThickness="0"
                      VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <!-- Profile Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,20">
                <!-- Basic Information -->
                <Border Style="{StaticResource ProfileSection}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                 Text="Basic Information"
                                 Foreground="#00FFFF"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,20"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Name -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                <TextBlock Text="Name"
                                         Foreground="#888888"
                                         FontSize="12"
                                         Margin="0,0,0,5"/>
                                <TextBox Text="{Binding Name}"
                                       Background="#1A1A2E"
                                       Foreground="White"
                                       BorderBrush="#00FFFF"
                                       BorderThickness="1"
                                       Padding="10,8"/>
                            </StackPanel>

                            <!-- Birthday -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                                <TextBlock Text="Birthday"
                                         Foreground="#888888"
                                         FontSize="12"
                                         Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding Birthday}"
                                          Background="#1A1A2E"
                                          Foreground="White"
                                          BorderBrush="#00FFFF"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- Favorite Color -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                <TextBlock Text="Favorite Color"
                                         Foreground="#888888"
                                         FontSize="12"
                                         Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Colors}"
                                        SelectedItem="{Binding FavoriteColor}"
                                        Background="#1A1A2E"
                                        Foreground="White"/>
                            </StackPanel>

                            <!-- Favorite Animal -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,15">
                                <TextBlock Text="Favorite Animal"
                                         Foreground="#888888"
                                         FontSize="12"
                                         Margin="0,0,0,5"/>
                                <TextBox Text="{Binding FavoriteAnimal}"
                                       Background="#1A1A2E"
                                       Foreground="White"
                                       BorderBrush="#00FFFF"
                                       BorderThickness="1"
                                       Padding="10,8"/>
                            </StackPanel>

                            <!-- About -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                                <TextBlock Text="About"
                                         Foreground="#888888"
                                         FontSize="12"
                                         Margin="0,0,0,5"/>
                                <TextBox Text="{Binding About}"
                                       Background="#1A1A2E"
                                       Foreground="White"
                                       BorderBrush="#00FFFF"
                                       BorderThickness="1"
                                       Padding="10,8"
                                       TextWrapping="Wrap"
                                       AcceptsReturn="True"
                                       Height="80"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Interests & Preferences -->
                <Border Style="{StaticResource ProfileSection}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                 Text="Interests & Preferences"
                                 Foreground="#00FFFF"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,20"/>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Interests -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="What does your child enjoy?"
                                         Foreground="White"
                                         FontSize="14"
                                         Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding Interests}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}"
                                                    IsChecked="{Binding IsSelected}"
                                                    Foreground="White"
                                                    Margin="0,0,20,10">
                                                <CheckBox.Template>
                                                    <ControlTemplate TargetType="CheckBox">
                                                        <Border x:Name="border"
                                                              Background="#333344"
                                                              CornerRadius="15"
                                                              Padding="15,8">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Icon}"
                                                                         FontSize="16"
                                                                         Margin="0,0,8,0"/>
                                                                <TextBlock Text="{TemplateBinding Content}"
                                                                         Foreground="White"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="border" Property="Background">
                                                                    <Setter.Value>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                            <GradientStop Color="#4400FFFF" Offset="0"/>
                                                                            <GradientStop Color="#440088FF" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </CheckBox.Template>
                                            </CheckBox>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Learning Style -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                                <TextBlock Text="Learning Style"
                                         Foreground="White"
                                         FontSize="14"
                                         Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Visual"
                                               GroupName="LearningStyle"
                                               IsChecked="{Binding IsVisualLearner}"
                                               Foreground="White"
                                               Margin="0,0,20,0"/>
                                    <RadioButton Content="Auditory"
                                               GroupName="LearningStyle"
                                               IsChecked="{Binding IsAuditoryLearner}"
                                               Foreground="White"
                                               Margin="0,0,20,0"/>
                                    <RadioButton Content="Kinesthetic"
                                               GroupName="LearningStyle"
                                               IsChecked="{Binding IsKinestheticLearner}"
                                               Foreground="White"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Communication Preferences -->
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="Communication Preferences"
                                         Foreground="White"
                                         FontSize="14"
                                         Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <TextBlock Text="Interaction Level"
                                                 Foreground="#888888"
                                                 HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding InteractionLevel, StringFormat={}{0}%}"
                                                 Foreground="#00FFFF"
                                                 HorizontalAlignment="Right"/>
                                    </Grid>

                                    <Slider Grid.Row="1"
                                          Value="{Binding InteractionLevel}"
                                          Minimum="0" Maximum="100"
                                          TickFrequency="25"
                                          IsSnapToTickEnabled="True"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Parental Controls -->
                <Border Style="{StaticResource ProfileSection}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                 Text="Parental Controls"
                                 Foreground="#00FFFF"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,20"/>

                        <StackPanel Grid.Row="1">
                            <CheckBox Content="Enable time restrictions"
                                    IsChecked="{Binding EnableTimeRestrictions}"
                                    Foreground="White"
                                    Margin="0,0,0,10"/>

                            <CheckBox Content="Enable content filtering"
                                    IsChecked="{Binding EnableContentFiltering}"
                                    Foreground="White"
                                    Margin="0,0,0,10"/>

                            <CheckBox Content="Require PIN for settings changes"
                                    IsChecked="{Binding RequirePinForSettings}"
                                    Foreground="White"
                                    Margin="0,0,0,10"/>

                            <CheckBox Content="Enable learning reports"
                                    IsChecked="{Binding EnableLearningReports}"
                                    Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Avatar Selection Popup -->
                <Popup IsOpen="{Binding ShowAvatarSelection}"
                     PlacementTarget="{Binding ElementName=MainGrid}"
                     Placement="Center">
                    <Border Background="#2A2A3E"
                          CornerRadius="15"
                          Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                     Text="Choose Avatar"
                                     Foreground="White"
                                     FontSize="18"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,15"/>

                            <ItemsControl Grid.Row="1"
                                        ItemsSource="{Binding Avatars}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="400"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}"
                                              FontSize="36"
                                              Style="{StaticResource AvatarButton}"
                                              Background="#3A3A4E"
                                              BorderBrush="{Binding IsSelected,
                                                          Converter={StaticResource BoolToBrushConverter},
                                                          ConverterParameter='#00FFFF|Transparent'}"
                                              Command="{Binding DataContext.SelectAvatarCommand,
                                                      RelativeSource={RelativeSource AncestorType=Window}}"
                                              CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Grid.Row="2"
                                  Content="Done"
                                  Command="{Binding CloseAvatarSelectionCommand}"
                                  Width="100" Height="35"
                                  Margin="0,15,0,0"
                                  HorizontalAlignment="Center"
                                  Background="#00FFFF"
                                  Foreground="#1A1A2E"
                                  FontWeight="Bold"
                                  BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                            <TextBlock Text="{TemplateBinding Content}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Foreground="{TemplateBinding Foreground}"
                                                     FontWeight="{TemplateBinding FontWeight}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </Popup>
            </StackPanel>
        </ScrollViewer>

        <!-- Actions -->
        <Border Grid.Row="2" Background="#0F0F1E" Padding="30">
            <Grid>
                <Button HorizontalAlignment="Left"
                      Content="Delete Profile"
                      Command="{Binding DeleteProfileCommand}"
                      Width="130" Height="40"
                      Background="#AA3344"
                      Foreground="White"
                      BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                <TextBlock Text="{TemplateBinding Content}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                          Click="CancelButton_Click"
                          Width="100" Height="40"
                          Background="#333344"
                          Foreground="White"
                          BorderThickness="0"
                          Margin="0,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                    <TextBlock Text="{TemplateBinding Content}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="{TemplateBinding Foreground}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Save Profile"
                          Command="{Binding SaveCommand}"
                          Width="130" Height="40"
                          BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#00FF88" Offset="0"/>
                                            <GradientStop Color="#00AA55" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="{TemplateBinding Content}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             FontWeight="Bold"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>