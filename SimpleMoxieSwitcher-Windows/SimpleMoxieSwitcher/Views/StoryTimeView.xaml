<Window x:Class="SimpleMoxieSwitcher.Views.StoryTimeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Story Time"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- Story Card Animation -->
        <Storyboard x:Key="StoryCardFloat">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                           From="0" To="-10" Duration="0:0:2"
                           AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Sparkle Animation -->
        <Storyboard x:Key="SparkleAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:1.5"
                           AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Magical Header with Stars -->
        <Border Grid.Row="0" Padding="30">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1A0033" Offset="0"/>
                    <GradientStop Color="#330066" Offset="0.5"/>
                    <GradientStop Color="#1A0033" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <!-- Animated Stars Background -->
                <Canvas>
                    <Ellipse Width="4" Height="4" Fill="White" Opacity="0.6"
                           Canvas.Left="50" Canvas.Top="10">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SparkleAnimation}"/>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="3" Height="3" Fill="#FFFF00" Opacity="0.5"
                           Canvas.Left="150" Canvas.Top="25">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SparkleAnimation}"
                                              BeginTime="0:0:0.5"/>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse Width="5" Height="5" Fill="#00FFFF" Opacity="0.4"
                           Canvas.Left="300" Canvas.Top="15">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SparkleAnimation}"
                                              BeginTime="0:0:1"/>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Canvas>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“šâœ¨"
                             FontSize="48"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,10">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFD700" BlurRadius="20" Opacity="0.6" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="Story Time with Moxie"
                             Foreground="White"
                             FontSize="32"
                             FontWeight="Bold"
                             HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#9966FF" BlurRadius="15" Opacity="0.5" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="Choose a magical adventure!"
                             Foreground="#CCCCFF"
                             FontSize="16"
                             HorizontalAlignment="Center"
                             Margin="0,8,0,0"/>
                </StackPanel>

                <Button Content="âœ•"
                      Click="CloseButton_Click"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Width="30" Height="30"
                      Background="Transparent"
                      Foreground="White"
                      BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Story Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Story Library -->
            <Border Grid.Column="0" Background="#0F0F1E" BorderThickness="0,1,1,0">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#333366" Offset="0.5"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Categories -->
                    <Border Grid.Row="0" Background="#1A1A33" Padding="15">
                        <TextBlock Text="Categories"
                                 Foreground="#CCCCFF"
                                 FontSize="16"
                                 FontWeight="SemiBold"/>
                    </Border>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Categories}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="Category"
                                           Content="{Binding Name}"
                                           IsChecked="{Binding IsSelected}"
                                           Foreground="White"
                                           Margin="5,3"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Story List -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Stories}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding SelectCommand}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          HorizontalContentAlignment="Stretch">
                                        <Border Background="{Binding IsSelected,
                                                           Converter={StaticResource BoolToBrushConverter},
                                                           ConverterParameter='#33663399|Transparent'}"
                                              CornerRadius="10"
                                              Padding="12"
                                              Margin="0,5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                         Text="{Binding Icon}"
                                                         FontSize="24"
                                                         Margin="0,0,12,0"
                                                         VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}"
                                                             Foreground="White"
                                                             FontWeight="SemiBold"
                                                             TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding Duration}"
                                                             Foreground="#888888"
                                                             FontSize="12"
                                                             Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Create New Story Button -->
                    <Button Grid.Row="3"
                          Content="âœ¨ Create New Story"
                          Command="{Binding CreateStoryCommand}"
                          Height="45"
                          Margin="15"
                          BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#9966FF" Offset="0"/>
                                            <GradientStop Color="#FF66CC" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="{TemplateBinding Content}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             FontWeight="Bold"
                                             FontSize="14"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Story Display -->
            <Grid Grid.Column="1" Margin="30">
                <!-- No Story Selected -->
                <Grid Visibility="{Binding NoStorySelected,
                                 Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸŒŸ"
                                 FontSize="80"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,20">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource StoryCardFloat}"/>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>

                        <TextBlock Text="Choose a story to begin"
                                 Foreground="#888888"
                                 FontSize="20"
                                 HorizontalAlignment="Center"/>

                        <TextBlock Text="or create your own magical adventure!"
                                 Foreground="#666666"
                                 FontSize="14"
                                 HorizontalAlignment="Center"
                                 Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Story Display -->
                <Grid Visibility="{Binding StorySelected,
                                 Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Story Header -->
                    <Border Grid.Row="0"
                          Background="#2A2A3E"
                          CornerRadius="15"
                          Padding="25"
                          Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                     Text="{Binding CurrentStoryIcon}"
                                     FontSize="48"
                                     Margin="0,0,20,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentStoryTitle}"
                                         Foreground="White"
                                         FontSize="24"
                                         FontWeight="Bold"/>
                                <TextBlock Text="{Binding CurrentStoryInfo}"
                                         Foreground="#888888"
                                         FontSize="14"
                                         Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Vertical">
                                <Button Content="â™¥"
                                      Command="{Binding FavoriteCommand}"
                                      FontSize="24"
                                      Width="40" Height="40"
                                      Background="Transparent"
                                      Foreground="{Binding IsFavorite,
                                                 Converter={StaticResource BoolToBrushConverter},
                                                 ConverterParameter='#FF3366|#666666'}"
                                      BorderThickness="0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Story Content -->
                    <ScrollViewer Grid.Row="1"
                                VerticalScrollBarVisibility="Auto"
                                Background="#1F1F33"
                                Padding="30">
                        <TextBlock Text="{Binding StoryContent}"
                                 Foreground="White"
                                 FontSize="18"
                                 LineHeight="30"
                                 TextWrapping="Wrap"
                                 FontFamily="Georgia"/>
                    </ScrollViewer>

                    <!-- Story Controls -->
                    <Border Grid.Row="2"
                          Background="#2A2A3E"
                          CornerRadius="15"
                          Padding="20"
                          Margin="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Playback Controls -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button Content="â®"
                                      Command="{Binding PreviousCommand}"
                                      Width="45" Height="45"
                                      FontSize="20"
                                      Background="#333344"
                                      Foreground="White"
                                      BorderThickness="0"
                                      Margin="0,0,10,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Ellipse Fill="{TemplateBinding Background}">
                                                <Ellipse.Triggers>
                                                    <EventTrigger RoutedEvent="Ellipse.MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="Fill.Color"
                                                                              To="#444455" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Ellipse.Triggers>
                                            </Ellipse>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button Content="{Binding PlayPauseIcon}"
                                      Command="{Binding PlayPauseCommand}"
                                      Width="60" Height="60"
                                      FontSize="28"
                                      BorderThickness="0"
                                      Margin="0,0,10,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Ellipse>
                                                    <Ellipse.Fill>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#FF6699" Offset="0"/>
                                                            <GradientStop Color="#9966FF" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Ellipse.Fill>
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect Color="#9966FF" BlurRadius="15" Opacity="0.6" ShadowDepth="0"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                                <TextBlock Text="{TemplateBinding Content}"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="White"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button Content="â­"
                                      Command="{Binding NextCommand}"
                                      Width="45" Height="45"
                                      FontSize="20"
                                      Background="#333344"
                                      Foreground="White"
                                      BorderThickness="0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Ellipse Fill="{TemplateBinding Background}"/>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <!-- Progress Bar -->
                            <Grid Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                                <ProgressBar Height="6"
                                           Value="{Binding ReadingProgress}"
                                           Maximum="100"
                                           Background="#1A1A2E"
                                           Foreground="#9966FF"/>
                                <TextBlock Text="{Binding ProgressText}"
                                         Foreground="#888888"
                                         FontSize="11"
                                         HorizontalAlignment="Center"
                                         Margin="0,-20,0,0"/>
                            </Grid>

                            <!-- Speed Control -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="Speed:"
                                         Foreground="#888888"
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"/>
                                <Slider Width="100"
                                      Value="{Binding ReadingSpeed}"
                                      Minimum="0.5" Maximum="2"
                                      VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ReadingSpeed, StringFormat={}{0:F1}x}"
                                         Foreground="White"
                                         VerticalAlignment="Center"
                                         Width="35"
                                         Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>