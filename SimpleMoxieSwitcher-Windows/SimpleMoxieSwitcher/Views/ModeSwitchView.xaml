<UserControl x:Class="SimpleMoxieSwitcher.Views.ModeSwitchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E3C72" Offset="0"/>
                <GradientStop Color="#2A5298" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Select Mode" FontSize="48" FontWeight="Bold"
                     Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,60"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Child Mode -->
                <Button Grid.Column="0" Command="{Binding SelectChildModeCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#33FFFFFF" BorderBrush="{Binding ChildModeBorder}"
                                  BorderThickness="3" CornerRadius="25" Width="350" Height="400"
                                  Padding="30">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="ðŸ§’" FontSize="80" HorizontalAlignment="Center"/>
                                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                        <TextBlock Text="Child Mode" FontSize="32" FontWeight="Bold"
                                                 Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                        <TextBlock Text="Fun learning and games with Moxie"
                                                 FontSize="16" Foreground="#DDDDDD" TextAlignment="Center"
                                                 TextWrapping="Wrap" Margin="0,0,0,20"/>
                                        <ItemsControl ItemsSource="{Binding ChildModeFeatures}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontSize="14" Foreground="#AAAAAA"
                                                             TextAlignment="Center" Margin="0,5"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                    <Border Grid.Row="2" Background="#00CED1" CornerRadius="20" Padding="15,10">
                                        <TextBlock Text="Enter" FontSize="18" FontWeight="Bold"
                                                 Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Divider -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Ellipse Width="15" Height="15" Fill="#666666" Margin="0,10"/>
                    <Ellipse Width="15" Height="15" Fill="#666666" Margin="0,10"/>
                    <Ellipse Width="15" Height="15" Fill="#666666" Margin="0,10"/>
                </StackPanel>

                <!-- Parent Mode -->
                <Button Grid.Column="2" Command="{Binding SelectParentModeCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#33FFFFFF" BorderBrush="{Binding ParentModeBorder}"
                                  BorderThickness="3" CornerRadius="25" Width="350" Height="400"
                                  Padding="30">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="ðŸ‘¨â€ðŸ‘©â€ðŸ‘§" FontSize="80" HorizontalAlignment="Center"/>
                                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                        <TextBlock Text="Parent Mode" FontSize="32" FontWeight="Bold"
                                                 Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                        <TextBlock Text="Monitor progress and manage settings"
                                                 FontSize="16" Foreground="#DDDDDD" TextAlignment="Center"
                                                 TextWrapping="Wrap" Margin="0,0,0,20"/>
                                        <ItemsControl ItemsSource="{Binding ParentModeFeatures}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontSize="14" Foreground="#AAAAAA"
                                                             TextAlignment="Center" Margin="0,5"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                    <Border Grid.Row="2" Background="#9B59B6" CornerRadius="20" Padding="15,10">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸ”’" FontSize="16" Margin="0,0,8,0" Foreground="White"/>
                                            <TextBlock Text="Enter PIN" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>