<UserControl x:Class="SimpleMoxieSwitcher.Views.StoryWizardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#1A1A1A">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2A1B5A" Offset="0"/>
                <GradientStop Color="#4A2C8A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="#2A2A2A" CornerRadius="25" MaxWidth="900" MaxHeight="700"
              HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Wizard Header -->
                <Border Grid.Row="0" Background="#1A000000" CornerRadius="25,25,0,0" Padding="30,20">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="âœ¨ Story Creation Wizard" FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding CurrentStepDescription}" FontSize="14"
                                     Foreground="#AAAAAA" Margin="0,5,0,0"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding Steps}" HorizontalAlignment="Right">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width="30" Height="30" Fill="{Binding Color}" Margin="5,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Wizard Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="40">
                    <ContentControl Content="{Binding CurrentStep}">
                        <ContentControl.Resources>
                            <!-- Step 1: Basic Info -->
                            <DataTemplate x:Key="BasicInfoTemplate">
                                <StackPanel>
                                    <TextBlock Text="Story Title" Foreground="White" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding StoryTitle}" FontSize="18" Padding="10" Margin="0,0,0,20"/>

                                    <TextBlock Text="Author Name" Foreground="White" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding AuthorName}" Padding="10" Margin="0,0,0,20"/>

                                    <TextBlock Text="Age Range" Foreground="White" Margin="0,0,0,5"/>
                                    <ComboBox SelectedItem="{Binding AgeRange}" Margin="0,0,0,20">
                                        <ComboBoxItem>3-5 years</ComboBoxItem>
                                        <ComboBoxItem>6-8 years</ComboBoxItem>
                                        <ComboBoxItem>9-12 years</ComboBoxItem>
                                    </ComboBox>

                                    <TextBlock Text="Story Genre" Foreground="White" Margin="0,0,0,10"/>
                                    <WrapPanel>
                                        <CheckBox Content="Adventure" IsChecked="{Binding IsAdventure}" Margin="5" Foreground="White"/>
                                        <CheckBox Content="Fantasy" IsChecked="{Binding IsFantasy}" Margin="5" Foreground="White"/>
                                        <CheckBox Content="Mystery" IsChecked="{Binding IsMystery}" Margin="5" Foreground="White"/>
                                        <CheckBox Content="Educational" IsChecked="{Binding IsEducational}" Margin="5" Foreground="White"/>
                                        <CheckBox Content="Funny" IsChecked="{Binding IsFunny}" Margin="5" Foreground="White"/>
                                    </WrapPanel>
                                </StackPanel>
                            </DataTemplate>

                            <!-- Step 2: Characters -->
                            <DataTemplate x:Key="CharactersTemplate">
                                <StackPanel>
                                    <TextBlock Text="Main Character" FontSize="20" FontWeight="Bold"
                                             Foreground="White" Margin="0,0,0,20"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="120" Height="120" CornerRadius="60"
                                              Background="#33FFFFFF" Margin="0,0,20,0">
                                            <TextBlock Text="{Binding MainCharacterEmoji}" FontSize="48"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Name" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding MainCharacterName}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Personality" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding MainCharacterPersonality}" TextWrapping="Wrap"
                                                   MinHeight="60" Margin="0,0,0,10"/>
                                        </StackPanel>
                                    </Grid>

                                    <Button Content="+ Add Supporting Character" Command="{Binding AddCharacterCommand}"
                                          HorizontalAlignment="Left" Padding="15,8" Margin="0,20,0,0"/>

                                    <ItemsControl ItemsSource="{Binding SupportingCharacters}" Margin="0,20,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#22FFFFFF" CornerRadius="10" Padding="15" Margin="0,5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="{Binding Emoji}" FontSize="32"
                                                                 Margin="0,0,15,0" VerticalAlignment="Center"/>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White"/>
                                                            <TextBlock Text="{Binding Role}" FontSize="12" Foreground="#AAAAAA"/>
                                                        </StackPanel>
                                                        <Button Grid.Column="2" Content="âœ•" Command="{Binding RemoveCommand}"
                                                              Background="Transparent" BorderThickness="0" Foreground="#FF4444"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>

                            <!-- Step 3: Story Settings -->
                            <DataTemplate x:Key="SettingsTemplate">
                                <StackPanel>
                                    <TextBlock Text="Story Settings" FontSize="20" FontWeight="Bold"
                                             Foreground="White" Margin="0,0,0,20"/>

                                    <TextBlock Text="Story Length" Foreground="White" Margin="0,0,0,10"/>
                                    <Slider Value="{Binding StoryLength}" Minimum="5" Maximum="30"
                                          TickFrequency="5" TickPlacement="BottomRight" Margin="0,0,0,20"/>
                                    <TextBlock Text="{Binding StoryLength, StringFormat='{}{0} minutes'}"
                                             HorizontalAlignment="Center" Foreground="#AAAAAA" Margin="0,-15,0,20"/>

                                    <CheckBox Content="Include educational elements" IsChecked="{Binding IncludeEducation}"
                                            Foreground="White" Margin="0,0,0,10"/>
                                    <CheckBox Content="Interactive storytelling" IsChecked="{Binding IsInteractive}"
                                            Foreground="White" Margin="0,0,0,10"/>
                                    <CheckBox Content="Multiple endings" IsChecked="{Binding HasMultipleEndings}"
                                            Foreground="White" Margin="0,0,0,10"/>
                                    <CheckBox Content="Include illustrations" IsChecked="{Binding IncludeIllustrations}"
                                            Foreground="White"/>

                                    <TextBlock Text="Moral/Lesson (optional)" Foreground="White" Margin="0,20,0,5"/>
                                    <TextBox Text="{Binding StoryMoral}" TextWrapping="Wrap" MinHeight="60"/>
                                </StackPanel>
                            </DataTemplate>

                            <!-- Step 4: AI Generation -->
                            <DataTemplate x:Key="GenerationTemplate">
                                <StackPanel>
                                    <TextBlock Text="ğŸ¤– AI Story Generation" FontSize="24" FontWeight="Bold"
                                             Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                                    <Border Background="#33FFFFFF" CornerRadius="15" Padding="30">
                                        <StackPanel>
                                            <TextBlock Text="Story Prompt (optional)" Foreground="White" Margin="0,0,0,10"/>
                                            <TextBox Text="{Binding StoryPrompt}" TextWrapping="Wrap" MinHeight="100"
                                                   AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                                            <Button Content="âœ¨ Generate Story with AI" Command="{Binding GenerateStoryCommand}"
                                                  HorizontalAlignment="Center" Padding="20,10" Margin="0,20,0,0"
                                                  FontSize="16" Background="#9B59B6"/>

                                            <ProgressBar IsIndeterminate="{Binding IsGenerating}" Height="4"
                                                       Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}"
                                                       Margin="0,20,0,0"/>

                                            <TextBlock Text="{Binding GenerationStatus}" HorizontalAlignment="Center"
                                                     Foreground="#00CED1" Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#22FFFFFF" CornerRadius="15" Padding="20" Margin="0,20,0,0"
                                          Visibility="{Binding HasGeneratedStory, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="Generated Story Preview" FontWeight="Bold"
                                                     Foreground="White" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding GeneratedPreview}" TextWrapping="Wrap"
                                                     Foreground="#AAAAAA" MaxHeight="200"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </ScrollViewer>

                <!-- Wizard Footer -->
                <Border Grid.Row="2" Background="#1A000000" CornerRadius="0,0,25,25" Padding="30,20">
                    <Grid>
                        <Button Content="Cancel" Command="{Binding CancelCommand}"
                              HorizontalAlignment="Left" Padding="20,10" Background="#AA4444"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Previous" Command="{Binding PreviousCommand}"
                                  IsEnabled="{Binding CanGoPrevious}" Padding="20,10" Margin="0,0,10,0"/>
                            <Button Content="{Binding NextButtonText}" Command="{Binding NextCommand}"
                                  Style="{StaticResource AccentButtonStyle}" Padding="20,10"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>