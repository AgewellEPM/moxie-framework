<Window x:Class="SimpleMoxieSwitcher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackgroundBrush}">
        <Border BorderBrush="{StaticResource AppGradientBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Margin="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Moxie Controller"
                               Style="{StaticResource AppTitleStyle}"
                               HorizontalAlignment="Center"/>

                    <!-- Status Bar -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0"
                                Spacing="12">

                        <!-- Online Status Button -->
                        <Button x:Name="StatusButton"
                                Click="OnStatusButtonClick"
                                Background="Transparent"
                                BorderThickness="0">
                            <Border Background="#26FFFFFF"
                                    CornerRadius="20"
                                    Padding="16,6">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Ellipse Width="10" Height="10">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{x:Bind ViewModel.IsOnline ? Colors.LimeGreen : Colors.Red, Mode=OneWay}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{x:Bind ViewModel.StatusText, Mode=OneWay}"
                                               Foreground="#CCFFFFFF"
                                               FontSize="12"/>
                                    <FontIcon Glyph="&#xE70D;"
                                              FontSize="10"
                                              Foreground="#99FFFFFF"
                                              Visibility="{x:Bind ViewModel.IsOnline, Mode=OneWay}"/>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- Language Selector -->
                        <ComboBox x:Name="LanguageSelector"
                                  ItemsSource="{x:Bind ViewModel.Languages}"
                                  SelectedItem="{x:Bind ViewModel.SelectedLanguage, Mode=TwoWay}"
                                  Background="#26FFFFFF"
                                  Foreground="White">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding Flag}" FontSize="16"/>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Loading Indicator -->
                <ProgressRing Grid.Row="1"
                              IsActive="{x:Bind ViewModel.IsUpdating, Mode=OneWay}"
                              Width="60" Height="60"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>

                <!-- Status Message -->
                <Border Grid.Row="1"
                        Background="#33000000"
                        CornerRadius="10"
                        Padding="20,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,20,0,0"
                        Visibility="{x:Bind ViewModel.HasStatusMessage, Mode=OneWay}">
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                               Foreground="{x:Bind ViewModel.StatusMessageColor, Mode=OneWay}"/>
                </Border>

                <!-- Main Content Grid -->
                <ScrollViewer Grid.Row="1"
                              Padding="20"
                              VerticalScrollBarVisibility="Auto">
                    <GridView ItemsSource="{x:Bind ViewModel.AllItems, Mode=OneWay}"
                              SelectionMode="None"
                              IsItemClickEnabled="True"
                              ItemClick="OnItemClick">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal"
                                               MaximumRowsOrColumns="5"
                                               ItemWidth="150"
                                               ItemHeight="100"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>

                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Button Click="OnTileClick"
                                        Tag="{Binding}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Width="150"
                                        Height="100">
                                    <Grid>
                                        <Border Background="{Binding BackgroundBrush}"
                                                CornerRadius="18">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Cyan"
                                                                  BlurRadius="15"
                                                                  Opacity="0.6"
                                                                  ShadowDepth="8"/>
                                            </Border.Effect>
                                        </Border>

                                        <Border Background="White"
                                                Opacity="0.6"
                                                CornerRadius="18"
                                                VerticalAlignment="Top"
                                                Height="50"/>

                                        <Border BorderBrush="White"
                                                BorderThickness="2"
                                                CornerRadius="18"
                                                Opacity="0.6"/>

                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Spacing="10">
                                            <TextBlock Text="{Binding Emoji}"
                                                       FontSize="{Binding EmojiSize}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       MaxLines="2"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>