<UserControl x:Class="SimpleMoxieSwitcher.Views.DocumentationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#1A1A1A">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation -->
            <Border Grid.Column="0"
                    Background="#22000000"
                    BorderBrush="#333333"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Box -->
                    <Border Grid.Row="0"
                          Background="#33FFFFFF"
                          CornerRadius="15"
                          Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                     Text="ðŸ”"
                                     VerticalAlignment="Center"
                                     Margin="10,0,5,0"/>

                            <TextBox Grid.Column="1"
                                   Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,8"/>
                        </Grid>
                    </Border>

                    <!-- Category Tabs -->
                    <StackPanel Grid.Row="1"
                              Orientation="Horizontal"
                              Margin="15,0,15,10">
                        <RadioButton Content="All"
                                   IsChecked="{Binding ShowAll}"
                                   GroupName="Category"
                                   Margin="0,0,10,0"
                                   Foreground="White"/>
                        <RadioButton Content="Getting Started"
                                   IsChecked="{Binding ShowGettingStarted}"
                                   GroupName="Category"
                                   Margin="0,0,10,0"
                                   Foreground="White"/>
                        <RadioButton Content="Advanced"
                                   IsChecked="{Binding ShowAdvanced}"
                                   GroupName="Category"
                                   Foreground="White"/>
                    </StackPanel>

                    <!-- Documentation Tree -->
                    <TreeView Grid.Row="2"
                            ItemsSource="{Binding DocumentationItems}"
                            SelectedItem="{Binding SelectedItem}"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="15,0">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <Border Padding="8,5"
                                      Background="{Binding IsSelected, Converter={StaticResource BoolToBackgroundConverter}}"
                                      CornerRadius="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}"
                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Title}"
                                                 Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Right Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Breadcrumb -->
                <Border Grid.Row="0"
                      Background="#22000000"
                      Padding="20,15">
                    <ItemsControl ItemsSource="{Binding Breadcrumb}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{Binding}"
                                          Command="{Binding DataContext.NavigateToBreadcrumbCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Foreground="#00CED1"
                                          Padding="5,2"/>
                                    <TextBlock Text="â€º"
                                             Foreground="#666666"
                                             VerticalAlignment="Center"
                                             Margin="5,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Documentation Content -->
                <ScrollViewer Grid.Row="1"
                            VerticalScrollBarVisibility="Auto">
                    <Grid Margin="30">
                        <!-- Article Header -->
                        <StackPanel>
                            <TextBlock Text="{Binding ArticleTitle}"
                                     FontSize="32"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal"
                                      Margin="0,0,0,30">
                                <Border Background="#33FFFFFF"
                                      CornerRadius="10"
                                      Padding="8,4"
                                      Margin="0,0,10,0">
                                    <TextBlock Text="{Binding ReadTime}"
                                             FontSize="12"
                                             Foreground="#AAAAAA"/>
                                </Border>

                                <Border Background="#33FFFFFF"
                                      CornerRadius="10"
                                      Padding="8,4"
                                      Margin="0,0,10,0">
                                    <TextBlock Text="{Binding LastUpdated}"
                                             FontSize="12"
                                             Foreground="#AAAAAA"/>
                                </Border>

                                <Border Background="#332ECC71"
                                      CornerRadius="10"
                                      Padding="8,4">
                                    <TextBlock Text="{Binding Difficulty}"
                                             FontSize="12"
                                             Foreground="#2ECC71"/>
                                </Border>
                            </StackPanel>

                            <!-- Article Content (Markdown rendered) -->
                            <FlowDocumentScrollViewer Document="{Binding ArticleContent}"
                                                     VerticalScrollBarVisibility="Disabled"
                                                     Foreground="White"/>

                            <!-- Code Examples -->
                            <Border Background="#1A000000"
                                  CornerRadius="10"
                                  Padding="20"
                                  Margin="0,20,0,0"
                                  Visibility="{Binding HasCodeExample, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                 Text="Example Code"
                                                 FontWeight="Bold"
                                                 Foreground="White"/>

                                        <Button Grid.Column="1"
                                              Content="Copy"
                                              Command="{Binding CopyCodeCommand}"
                                              Padding="10,5"/>
                                    </Grid>

                                    <TextBox Grid.Row="1"
                                           Text="{Binding CodeExample}"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Background="Transparent"
                                           Foreground="#00FF00"
                                           BorderThickness="0"
                                           IsReadOnly="True"
                                           Margin="0,10,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Related Articles -->
                            <Border Background="#22FFFFFF"
                                  CornerRadius="15"
                                  Padding="20"
                                  Margin="0,30,0,0"
                                  Visibility="{Binding HasRelatedArticles, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Related Articles"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             Margin="0,0,0,15"/>

                                    <ItemsControl ItemsSource="{Binding RelatedArticles}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding DataContext.OpenArticleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Left"
                                                      Background="Transparent"
                                                      BorderThickness="0"
                                                      Padding="10,8"
                                                      Margin="0,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="â†’"
                                                                 Foreground="#00CED1"
                                                                 Margin="0,0,10,0"/>
                                                        <TextBlock Text="{Binding Title}"
                                                                 Foreground="White"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- Feedback Section -->
                            <Border Background="#22FFFFFF"
                                  CornerRadius="15"
                                  Padding="20"
                                  Margin="0,30,0,0">
                                <StackPanel>
                                    <TextBlock Text="Was this helpful?"
                                             FontSize="16"
                                             Foreground="White"
                                             Margin="0,0,0,10"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="ðŸ‘ Yes"
                                              Command="{Binding HelpfulCommand}"
                                              Padding="15,8"
                                              Margin="0,0,10,0"/>

                                        <Button Content="ðŸ‘Ž No"
                                              Command="{Binding NotHelpfulCommand}"
                                              Padding="15,8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- Floating Help Button -->
                <Button Grid.Row="1"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom"
                      Margin="30"
                      Width="60"
                      Height="60"
                      Command="{Binding ShowHelpChatCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="#00CED1">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="Black"
                                                        BlurRadius="10"
                                                        ShadowDepth="3"
                                                        Opacity="0.5"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock Text="?"
                                         FontSize="28"
                                         FontWeight="Bold"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>