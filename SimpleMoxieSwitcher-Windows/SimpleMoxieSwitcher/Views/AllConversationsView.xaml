<Window x:Class="SimpleMoxieSwitcher.Views.AllConversationsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="All Conversations"
        Height="750" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- Conversation Card Style -->
        <Style x:Key="ConversationCard" TargetType="Border">
            <Setter Property="Background" Value="#2A2A3E"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2A2A3E" Offset="0"/>
                                <GradientStop Color="#3A3A4E" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#00FFFF" BlurRadius="10" Opacity="0.3" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#444455"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                              Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              CornerRadius="15"
                              Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3300FFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00FFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0F0F1E" Padding="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¬" FontSize="32" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="All Conversations"
                                 Foreground="White"
                                 FontSize="24"
                                 FontWeight="Bold"/>
                        <TextBlock Foreground="#888888" FontSize="14" Margin="0,4,0,0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} conversations â€¢ {1} messages total">
                                    <Binding Path="TotalConversations"/>
                                    <Binding Path="TotalMessages"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Search Box -->
                    <Border Background="#2A2A3E"
                          CornerRadius="20"
                          Width="250"
                          Margin="0,0,15,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Path Grid.Column="0"
                                Data="M 10 10 C 10 5 5 0 0 0 C -5 0 -10 5 -10 10 C -10 15 -5 20 0 20 C 5 20 10 15 10 10 M 7 7 L 15 15"
                                Stroke="#888888"
                                StrokeThickness="2"
                                Margin="15,0,10,0"
                                VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                                   Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                   Background="Transparent"
                                   Foreground="White"
                                   BorderThickness="0"
                                   VerticalAlignment="Center"
                                   Padding="0,10,15,10"/>
                        </Grid>
                    </Border>

                    <Button Content="âœ•"
                          Click="CloseButton_Click"
                          Width="30" Height="30"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#16213E" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                         Text="Filter by:"
                         Foreground="#888888"
                         VerticalAlignment="Center"
                         Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ToggleButton Content="Today"
                                IsChecked="{Binding FilterToday}"
                                Style="{StaticResource FilterButton}"/>
                    <ToggleButton Content="This Week"
                                IsChecked="{Binding FilterThisWeek}"
                                Style="{StaticResource FilterButton}"/>
                    <ToggleButton Content="This Month"
                                IsChecked="{Binding FilterThisMonth}"
                                Style="{StaticResource FilterButton}"/>
                    <Separator Width="20" Background="Transparent"/>
                    <ToggleButton Content="ðŸŽ® Games"
                                IsChecked="{Binding FilterGames}"
                                Style="{StaticResource FilterButton}"/>
                    <ToggleButton Content="ðŸ“š Learning"
                                IsChecked="{Binding FilterLearning}"
                                Style="{StaticResource FilterButton}"/>
                    <ToggleButton Content="ðŸ’­ Chat"
                                IsChecked="{Binding FilterChat}"
                                Style="{StaticResource FilterButton}"/>
                </StackPanel>

                <ComboBox Grid.Column="2"
                        ItemsSource="{Binding SortOptions}"
                        SelectedItem="{Binding SelectedSortOption}"
                        Width="150"
                        Background="#2A2A3E"
                        Foreground="White"/>
            </Grid>
        </Border>

        <!-- Conversations Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Conversation List -->
            <Border Grid.Column="0" Background="#0F0F1E" BorderThickness="0,0,1,0">
                <Border.BorderBrush>
                    <SolidColorBrush Color="#333344" Opacity="0.5"/>
                </Border.BorderBrush>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FilteredConversations}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectConversationCommand,
                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalContentAlignment="Stretch">
                                    <Border Padding="20,15"
                                          Background="{Binding IsSelected,
                                                     Converter={StaticResource BoolToBrushConverter},
                                                     ConverterParameter='#2200FFFF|Transparent'}"
                                          BorderThickness="0,0,0,1"
                                          BorderBrush="#1A1A2E">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                         Text="{Binding PersonalityEmoji}"
                                                         FontSize="20"
                                                         Margin="0,0,10,0"/>

                                                <TextBlock Grid.Column="1"
                                                         Text="{Binding Title}"
                                                         Foreground="White"
                                                         FontWeight="SemiBold"
                                                         TextTrimming="CharacterEllipsis"/>

                                                <TextBlock Grid.Column="2"
                                                         Text="{Binding TimeAgo}"
                                                         Foreground="#666666"
                                                         FontSize="11"/>
                                            </Grid>

                                            <TextBlock Grid.Row="1"
                                                     Text="{Binding LastMessage}"
                                                     Foreground="#AAAAAA"
                                                     FontSize="13"
                                                     TextTrimming="CharacterEllipsis"
                                                     MaxHeight="40"
                                                     TextWrapping="Wrap"
                                                     Margin="0,6,0,0"/>

                                            <Grid Grid.Row="2" Margin="0,6,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                      Background="#333344"
                                                      CornerRadius="10"
                                                      Padding="6,2"
                                                      Margin="0,0,5,0">
                                                    <TextBlock Text="{Binding MessageCount, StringFormat={}{0} msgs}"
                                                             Foreground="#888888"
                                                             FontSize="10"/>
                                                </Border>

                                                <Border Grid.Column="1"
                                                      Background="{Binding CategoryColor}"
                                                      CornerRadius="10"
                                                      Padding="6,2">
                                                    <TextBlock Text="{Binding Category}"
                                                             Foreground="White"
                                                             FontSize="10"/>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Conversation Detail -->
            <Grid Grid.Column="1">
                <!-- No Selection -->
                <StackPanel Visibility="{Binding NoConversationSelected,
                                       Converter={StaticResource BoolToVisibilityConverter}}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ’¬"
                             FontSize="64"
                             Foreground="#333344"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>
                    <TextBlock Text="Select a conversation to view"
                             Foreground="#666666"
                             FontSize="18"
                             HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Selected Conversation -->
                <Grid Visibility="{Binding ConversationSelected,
                                 Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Conversation Header -->
                    <Border Grid.Row="0" Background="#16213E" Padding="25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding SelectedConversation.Title}"
                                         Foreground="White"
                                         FontSize="20"
                                         FontWeight="SemiBold"/>
                                <TextBlock Foreground="#888888"
                                         FontSize="13"
                                         Margin="0,5,0,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} â€¢ {1} messages â€¢ {2}">
                                            <Binding Path="SelectedConversation.PersonalityName"/>
                                            <Binding Path="SelectedConversation.MessageCount"/>
                                            <Binding Path="SelectedConversation.Date"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="ðŸ“¤ Export"
                                      Command="{Binding ExportCommand}"
                                      Background="#333344"
                                      Foreground="White"
                                      Padding="12,8"
                                      Margin="0,0,10,0"
                                      BorderThickness="0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                                <TextBlock Text="{TemplateBinding Content}"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button Content="ðŸ—‘ Delete"
                                      Command="{Binding DeleteCommand}"
                                      Background="#AA3344"
                                      Foreground="White"
                                      Padding="12,8"
                                      BorderThickness="0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                                <TextBlock Text="{TemplateBinding Content}"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Messages -->
                    <ScrollViewer Grid.Row="1"
                                VerticalScrollBarVisibility="Auto"
                                Background="#1A1A2E"
                                Padding="25">
                        <ItemsControl ItemsSource="{Binding SelectedConversation.Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,10">
                                        <Border HorizontalAlignment="{Binding IsUser,
                                                                     Converter={StaticResource BoolToAlignmentConverter},
                                                                     ConverterParameter='Right|Left'}"
                                              MaxWidth="600"
                                              CornerRadius="15"
                                              Padding="15"
                                              Background="{Binding IsUser,
                                                         Converter={StaticResource BoolToBrushConverter},
                                                         ConverterParameter='#0088FF|#2A2A3E'}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Content}"
                                                         Foreground="White"
                                                         TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Timestamp}"
                                                         Foreground="#AAFFFFFF"
                                                         FontSize="10"
                                                         Margin="0,5,0,0"
                                                         HorizontalAlignment="{Binding IsUser,
                                                                              Converter={StaticResource BoolToAlignmentConverter},
                                                                              ConverterParameter='Right|Left'}"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Actions Bar -->
                    <Border Grid.Row="2" Background="#0F0F1E" Padding="20">
                        <Grid>
                            <TextBlock Text="{Binding SelectedConversation.Statistics}"
                                     Foreground="#666666"
                                     FontSize="12"
                                     HorizontalAlignment="Left"/>

                            <Button Content="Open in Chat"
                                  Command="{Binding OpenInChatCommand}"
                                  HorizontalAlignment="Right"
                                  Padding="15,8"
                                  BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#00FFFF" Offset="0"/>
                                                    <GradientStop Color="#0088FF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="{TemplateBinding Content}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Foreground="White"
                                                     FontWeight="Bold"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>