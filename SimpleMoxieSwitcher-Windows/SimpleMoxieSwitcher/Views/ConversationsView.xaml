<UserControl x:Class="SimpleMoxieSwitcher.Views.ConversationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid Background="#1A1A1A">
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#2D1B69" Offset="0.5"/>
                <GradientStop Color="#0F3460" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#33000000"
                    Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Conversations"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Foreground="White"/>
                        <TextBlock Text="{Binding ConversationSummary}"
                                 FontSize="14"
                                 Foreground="#AAAAAA"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Stats -->
                    <StackPanel Grid.Column="1"
                              Orientation="Horizontal">
                        <Border Background="#22FFFFFF"
                              CornerRadius="10"
                              Padding="15,10"
                              Margin="10,0">
                            <StackPanel>
                                <TextBlock Text="{Binding TotalConversations}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="White"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Total"
                                         FontSize="12"
                                         Foreground="#AAAAAA"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#22FFFFFF"
                              CornerRadius="10"
                              Padding="15,10"
                              Margin="10,0">
                            <StackPanel>
                                <TextBlock Text="{Binding TodayConversations}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#00CED1"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="Today"
                                         FontSize="12"
                                         Foreground="#AAAAAA"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Filter and Search Bar -->
            <Border Grid.Row="1"
                    Background="#22000000"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Border Grid.Column="0"
                          Background="#33FFFFFF"
                          CornerRadius="20"
                          Margin="0,0,20,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                     Text="ðŸ”"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     Margin="15,0,10,0"/>

                            <TextBox Grid.Column="1"
                                   Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Foreground="White"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,10"/>
                        </Grid>
                    </Border>

                    <!-- Filter Buttons -->
                    <StackPanel Grid.Column="1"
                              Orientation="Horizontal">
                        <RadioButton Content="All"
                                   IsChecked="{Binding ShowAll}"
                                   GroupName="Filter"
                                   Foreground="White"
                                   Margin="10,0"/>
                        <RadioButton Content="Today"
                                   IsChecked="{Binding ShowToday}"
                                   GroupName="Filter"
                                   Foreground="White"
                                   Margin="10,0"/>
                        <RadioButton Content="This Week"
                                   IsChecked="{Binding ShowThisWeek}"
                                   GroupName="Filter"
                                   Foreground="White"
                                   Margin="10,0"/>
                        <RadioButton Content="Starred"
                                   IsChecked="{Binding ShowStarred}"
                                   GroupName="Filter"
                                   Foreground="White"
                                   Margin="10,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Conversations List -->
            <ScrollViewer Grid.Row="2"
                        VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredConversations}"
                            Margin="20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#22FFFFFF"
                                  CornerRadius="15"
                                  Margin="0,10"
                                  Padding="20">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                                    </EventTrigger>
                                </Border.Triggers>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Profile Icon -->
                                    <Border Grid.Column="0"
                                          Width="60"
                                          Height="60"
                                          CornerRadius="30"
                                          Background="{Binding ProfileColor}"
                                          Margin="0,0,20,0">
                                        <TextBlock Text="{Binding ProfileInitial}"
                                                 FontSize="24"
                                                 FontWeight="Bold"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Conversation Details -->
                                    <StackPanel Grid.Column="1"
                                              VerticalAlignment="Center">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                     Text="{Binding Title}"
                                                     FontSize="18"
                                                     FontWeight="SemiBold"
                                                     Foreground="White"/>

                                            <StackPanel Grid.Column="1"
                                                      Orientation="Horizontal"
                                                      Margin="15,0,0,0">
                                                <!-- Star Indicator -->
                                                <TextBlock Text="â­"
                                                         FontSize="14"
                                                         Margin="0,0,5,0"
                                                         Visibility="{Binding IsStarred, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                <!-- Emotion Badges -->
                                                <ItemsControl ItemsSource="{Binding EmotionBadges}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#33FFFFFF"
                                                                  CornerRadius="10"
                                                                  Padding="5,2"
                                                                  Margin="2,0">
                                                                <TextBlock Text="{Binding}"
                                                                         FontSize="11"
                                                                         Foreground="#AAAAAA"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Grid>

                                        <TextBlock Text="{Binding LastMessage}"
                                                 FontSize="14"
                                                 Foreground="#AAAAAA"
                                                 Margin="0,5,0,0"
                                                 TextTrimming="CharacterEllipsis"/>

                                        <Grid Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                     Text="ðŸ’¬"
                                                     FontSize="12"
                                                     Margin="0,0,5,0"/>
                                            <TextBlock Grid.Column="1"
                                                     Text="{Binding MessageCount}"
                                                     FontSize="12"
                                                     Foreground="#AAAAAA"
                                                     Margin="0,0,15,0"/>

                                            <TextBlock Grid.Column="2"
                                                     Text="â±ï¸"
                                                     FontSize="12"
                                                     Margin="0,0,5,0"/>
                                            <TextBlock Grid.Column="3"
                                                     Text="{Binding Duration}"
                                                     FontSize="12"
                                                     Foreground="#AAAAAA"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Time and Actions -->
                                    <StackPanel Grid.Column="2"
                                              VerticalAlignment="Center">
                                        <TextBlock Text="{Binding TimeAgo}"
                                                 FontSize="12"
                                                 Foreground="#AAAAAA"
                                                 HorizontalAlignment="Right"
                                                 Margin="0,0,0,10"/>

                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="ðŸ‘ï¸"
                                                  ToolTip="View"
                                                  Command="{Binding DataContext.ViewConversationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  Width="35"
                                                  Height="35"
                                                  Background="Transparent"
                                                  BorderBrush="#666666"
                                                  Foreground="White"
                                                  Margin="2,0"/>

                                            <ToggleButton Content="â­"
                                                        ToolTip="Star"
                                                        IsChecked="{Binding IsStarred}"
                                                        Command="{Binding DataContext.ToggleStarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Width="35"
                                                        Height="35"
                                                        Background="Transparent"
                                                        BorderBrush="#666666"
                                                        Foreground="White"
                                                        Margin="2,0"/>

                                            <Button Content="ðŸ“¤"
                                                  ToolTip="Export"
                                                  Command="{Binding DataContext.ExportConversationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  Width="35"
                                                  Height="35"
                                                  Background="Transparent"
                                                  BorderBrush="#666666"
                                                  Foreground="White"
                                                  Margin="2,0"/>

                                            <Button Content="ðŸ—‘ï¸"
                                                  ToolTip="Delete"
                                                  Command="{Binding DataContext.DeleteConversationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  Width="35"
                                                  Height="35"
                                                  Background="Transparent"
                                                  BorderBrush="#FF4444"
                                                  Foreground="#FF4444"
                                                  Margin="2,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <Border Visibility="{Binding EmptyStateVisibility}"
                      Background="#22FFFFFF"
                      CornerRadius="20"
                      Padding="60"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,100,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¬"
                                 FontSize="64"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,20"/>
                        <TextBlock Text="No Conversations Found"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding EmptyStateMessage}"
                                 FontSize="14"
                                 Foreground="#AAAAAA"
                                 HorizontalAlignment="Center"
                                 TextAlignment="Center"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <!-- Floating Action Button -->
            <Button Grid.Row="2"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  Margin="30"
                  Width="60"
                  Height="60"
                  Command="{Binding NewConversationCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="#00CED1">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black"
                                                    BlurRadius="10"
                                                    ShadowDepth="3"
                                                    Opacity="0.5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock Text="+"
                                     FontSize="32"
                                     FontWeight="Light"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>