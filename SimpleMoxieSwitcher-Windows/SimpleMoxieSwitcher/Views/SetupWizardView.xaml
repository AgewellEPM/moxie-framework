<Window x:Class="SimpleMoxieSwitcher.Views.SetupWizardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Setup Wizard"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- Page Transition Animation -->
        <Storyboard x:Key="SlideIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                              From="50,0,0,0" To="0" Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0F0F1E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="OpenMoxie Setup Wizard"
                         Foreground="White"
                         FontSize="24"
                         FontWeight="SemiBold"/>

                <!-- Step Indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ItemsControl ItemsSource="{Binding Steps}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,0">
                                    <Ellipse Width="30" Height="30">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding IsComplete,
                                                Converter={StaticResource BoolToColorConverter},
                                                ConverterParameter='#00FF88|#333333'}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Number}"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             FontWeight="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Page Content Frame -->
        <Frame Grid.Row="1"
               x:Name="PageFrame"
               NavigationUIVisibility="Hidden"
               Margin="40">
            <Frame.Triggers>
                <EventTrigger RoutedEvent="Frame.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource SlideIn}"/>
                </EventTrigger>
            </Frame.Triggers>
        </Frame>

        <!-- Navigation Buttons -->
        <Border Grid.Row="2" Background="#0F0F1E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                      Content="Previous"
                      Command="{Binding PreviousCommand}"
                      Visibility="{Binding CanGoPrevious, Converter={StaticResource BoolToVisibilityConverter}}"
                      Width="100" Height="35"
                      Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5"
                                  Background="#333344"
                                  BorderBrush="#00FFFF"
                                  BorderThickness="1">
                                <TextBlock Text="{TemplateBinding Content}"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Skip Button (show on all steps except the last one) -->
                <Button Grid.Column="2"
                      Content="Skip"
                      Command="{Binding SkipCommand}"
                      Width="100" Height="35"
                      Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5" Background="Transparent">
                                <TextBlock Text="{TemplateBinding Content}"
                                         Foreground="White"
                                         Opacity="0.6"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         FontWeight="SemiBold"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Continue/Next Button -->
                <Button Grid.Column="3"
                      Content="{Binding NextButtonText}"
                      Command="{Binding NextCommand}"
                      Width="100" Height="35"
                      Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00FFFF" Offset="0"/>
                                        <GradientStop Color="#00AA88" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="{TemplateBinding Content}"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         FontWeight="SemiBold"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="4"
                      Content="Cancel"
                      Command="{Binding CancelCommand}"
                      Width="100" Height="35">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5"
                                  Background="#FF3344">
                                <TextBlock Text="{TemplateBinding Content}"
                                         Foreground="White"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>