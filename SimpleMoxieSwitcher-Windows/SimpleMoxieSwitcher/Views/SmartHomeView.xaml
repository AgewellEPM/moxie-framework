<Window x:Class="SimpleMoxieSwitcher.Views.SmartHomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Smart Home Control"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E">

    <Window.Resources>
        <!-- Device Card Style -->
        <Style x:Key="DeviceCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2A2A3E" Offset="0"/>
                        <GradientStop Color="#1F1F33" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#00FFFF" BlurRadius="20" Opacity="0.5" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Toggle Switch Template -->
        <ControlTemplate x:Key="ToggleSwitch" TargetType="CheckBox">
            <Grid>
                <Border x:Name="SwitchBorder"
                      Width="50" Height="26"
                      CornerRadius="13"
                      Background="#333344">
                    <Grid>
                        <Ellipse x:Name="SwitchKnob"
                               Width="22" Height="22"
                               Fill="White"
                               HorizontalAlignment="Left"
                               Margin="2">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="KnobTransform" X="0"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Grid>
                </Border>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="SwitchBorder"
                                              Storyboard.TargetProperty="Background.Color"
                                              To="#00FF88" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetName="KnobTransform"
                                               Storyboard.TargetProperty="X"
                                               To="24" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="SwitchBorder"
                                              Storyboard.TargetProperty="Background.Color"
                                              To="#333344" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetName="KnobTransform"
                                               Storyboard.TargetProperty="X"
                                               To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0F0F1E" Padding="30">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="ðŸ " FontSize="32" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Smart Home Control"
                                 Foreground="White"
                                 FontSize="24"
                                 FontWeight="Bold"/>
                        <TextBlock Text="{Binding ConnectedDeviceCount, StringFormat='{}Connected Devices: {0}'}"
                                 Foreground="#888888"
                                 FontSize="14"
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="âœ•"
                      Click="CloseButton_Click"
                      HorizontalAlignment="Right"
                      Width="30" Height="30"
                      Background="Transparent"
                      Foreground="White"
                      BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Room Tabs -->
        <TabControl Grid.Row="1"
                  Background="Transparent"
                  BorderThickness="0"
                  Margin="30,20,30,10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border"
                                      Background="Transparent"
                                      Padding="20,10"
                                      Margin="0,0,5,0"
                                      CornerRadius="10,10,0,0">
                                    <ContentPresenter ContentSource="Header"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#3300FFFF" Offset="0"/>
                                                    <GradientStop Color="Transparent" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="All Devices"/>
            <TabItem Header="Living Room"/>
            <TabItem Header="Kitchen"/>
            <TabItem Header="Bedroom"/>
            <TabItem Header="Office"/>
        </TabControl>

        <!-- Devices Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Devices}" Margin="30,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource DeviceCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Device Icon & Status -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                             Text="{Binding Icon}"
                                             FontSize="36"
                                             Margin="0,0,15,0"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                 Foreground="White"
                                                 FontSize="18"
                                                 FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Room}"
                                                 Foreground="#888888"
                                                 FontSize="12"/>
                                    </StackPanel>

                                    <CheckBox Grid.Column="2"
                                            IsChecked="{Binding IsOn}"
                                            Template="{StaticResource ToggleSwitch}"
                                            VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Status Indicator -->
                                <StackPanel Grid.Row="1"
                                          Orientation="Horizontal"
                                          Margin="0,10,0,0">
                                    <Ellipse Width="8" Height="8"
                                           Fill="{Binding IsOnline,
                                                 Converter={StaticResource BoolToBrushConverter},
                                                 ConverterParameter='#00FF88|#FF4444'}"/>
                                    <TextBlock Text="{Binding Status}"
                                             Foreground="#888888"
                                             FontSize="12"
                                             Margin="8,0,0,0"/>
                                </StackPanel>

                                <!-- Device Controls -->
                                <StackPanel Grid.Row="2"
                                          Margin="0,15,0,10"
                                          Visibility="{Binding HasControls,
                                                     Converter={StaticResource BoolToVisibilityConverter}}">

                                    <!-- Brightness Control -->
                                    <Grid Visibility="{Binding HasBrightness,
                                                     Converter={StaticResource BoolToVisibilityConverter}}"
                                        Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                 Text="â˜€"
                                                 Foreground="White"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>

                                        <Slider Grid.Column="1"
                                              Value="{Binding Brightness}"
                                              Minimum="0" Maximum="100"
                                              VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2"
                                                 Text="{Binding Brightness, StringFormat={}{0}%}"
                                                 Foreground="White"
                                                 Width="35"
                                                 Margin="10,0,0,0"
                                                 VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- Color Control -->
                                    <ItemsControl ItemsSource="{Binding ColorPresets}"
                                                Visibility="{Binding HasColor,
                                                           Converter={StaticResource BoolToVisibilityConverter}}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Width="30" Height="30"
                                                      Margin="3"
                                                      Command="{Binding SetColorCommand}"
                                                      BorderThickness="2"
                                                      BorderBrush="White">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Ellipse Fill="{Binding Color}"
                                                                   Stroke="{Binding IsSelected,
                                                                          Converter={StaticResource BoolToBrushConverter},
                                                                          ConverterParameter='White|Transparent'}"
                                                                   StrokeThickness="2"/>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Temperature Control -->
                                    <Grid Visibility="{Binding HasTemperature,
                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                 Text="ðŸŒ¡"
                                                 Foreground="White"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>

                                        <Slider Grid.Column="1"
                                              Value="{Binding Temperature}"
                                              Minimum="60" Maximum="85"
                                              VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2"
                                                 Text="{Binding Temperature, StringFormat={}{0}Â°F}"
                                                 Foreground="White"
                                                 Width="40"
                                                 Margin="10,0,0,0"
                                                 VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Quick Actions -->
                                <StackPanel Grid.Row="3"
                                          Orientation="Horizontal"
                                          HorizontalAlignment="Center">
                                    <Button Content="Schedule"
                                          Command="{Binding ScheduleCommand}"
                                          Margin="0,0,5,0"
                                          Padding="10,5"
                                          Background="#333344"
                                          Foreground="White"
                                          BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="5"
                                                      Background="{TemplateBinding Background}">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                             Foreground="{TemplateBinding Foreground}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             FontSize="12"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="Settings"
                                          Command="{Binding SettingsCommand}"
                                          Padding="10,5"
                                          Background="#333344"
                                          Foreground="White"
                                          BorderThickness="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="5"
                                                      Background="{TemplateBinding Background}">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                             Foreground="{TemplateBinding Foreground}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             FontSize="12"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>