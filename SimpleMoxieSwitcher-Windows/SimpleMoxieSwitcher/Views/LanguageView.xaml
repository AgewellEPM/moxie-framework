<UserControl x:Class="SimpleMoxieSwitcher.Views.LanguageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#1A1A1A">
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#4A3A6A" Offset="0.5"/>
                <GradientStop Color="#3A2A5A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#33000000"
                    Padding="30,20">
                <StackPanel>
                    <TextBlock Text="Language Selection"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"/>
                    <TextBlock Text="Choose languages for Moxie to teach and practice"
                           FontSize="14"
                           Foreground="#AAAAAA"
                           Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1"
                        VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- Primary Language -->
                    <Border Background="#33000000"
                          CornerRadius="20"
                          Padding="30"
                          Margin="0,0,0,30">
                        <StackPanel>
                            <TextBlock Text="Primary Language"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,20"/>

                            <TextBlock Text="This is the main language Moxie will use for communication"
                                     Foreground="#AAAAAA"
                                     Margin="0,0,0,20"/>

                            <ItemsControl ItemsSource="{Binding PrimaryLanguages}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton GroupName="Primary"
                                                   IsChecked="{Binding IsSelected}"
                                                   Margin="10">
                                            <Border Background="#22FFFFFF"
                                                  CornerRadius="15"
                                                  Padding="20"
                                                  Width="200">
                                                <StackPanel>
                                                    <Image Source="{Binding FlagImage}"
                                                         Width="60"
                                                         Height="40"
                                                         Margin="0,0,0,10"/>
                                                    <TextBlock Text="{Binding Name}"
                                                             FontSize="18"
                                                             FontWeight="SemiBold"
                                                             Foreground="White"
                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding NativeName}"
                                                             FontSize="14"
                                                             Foreground="#AAAAAA"
                                                             HorizontalAlignment="Center"
                                                             Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </RadioButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Learning Languages -->
                    <Border Background="#33000000"
                          CornerRadius="20"
                          Padding="30">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Learning Languages"
                                             FontSize="24"
                                             FontWeight="Bold"
                                             Foreground="White"/>
                                    <TextBlock Text="Select languages for Moxie to teach (up to 3)"
                                             Foreground="#AAAAAA"
                                             Margin="0,5,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1"
                                         Text="{Binding SelectedLanguagesCount}"
                                         FontSize="20"
                                         Foreground="#00CED1"
                                         VerticalAlignment="Center"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding LearningLanguages}"
                                        Margin="0,20,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                IsEnabled="{Binding IsEnabled}"
                                                Margin="10">
                                            <Border Background="{Binding BackgroundColor}"
                                                  BorderBrush="{Binding BorderColor}"
                                                  BorderThickness="2"
                                                  CornerRadius="15"
                                                  Padding="15"
                                                  Width="180">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Image Grid.Row="0"
                                                         Source="{Binding FlagImage}"
                                                         Width="50"
                                                         Height="35"
                                                         HorizontalAlignment="Center"
                                                         Margin="0,0,0,10"/>

                                                    <TextBlock Grid.Row="1"
                                                             Text="{Binding Name}"
                                                             FontSize="16"
                                                             FontWeight="SemiBold"
                                                             Foreground="White"
                                                             HorizontalAlignment="Center"/>

                                                    <TextBlock Grid.Row="2"
                                                             Text="{Binding NativeName}"
                                                             FontSize="12"
                                                             Foreground="#AAAAAA"
                                                             HorizontalAlignment="Center"
                                                             Margin="0,3,0,0"/>

                                                    <Border Grid.Row="3"
                                                          Background="#22FFFFFF"
                                                          CornerRadius="10"
                                                          Padding="5,2"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,8,0,0">
                                                        <TextBlock Text="{Binding Difficulty}"
                                                                 FontSize="11"
                                                                 Foreground="{Binding DifficultyColor}"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Language Settings for Selected -->
                            <Border Background="#22FFFFFF"
                                  CornerRadius="15"
                                  Padding="20"
                                  Margin="0,30,0,0"
                                  Visibility="{Binding HasSelectedLanguages, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Learning Settings"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             Margin="0,0,0,15"/>

                                    <ItemsControl ItemsSource="{Binding SelectedLanguageSettings}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#1A000000"
                                                      CornerRadius="10"
                                                      Padding="15"
                                                      Margin="0,0,0,15">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <Image Grid.Row="0" Grid.Column="0"
                                                             Source="{Binding FlagImage}"
                                                             Width="30"
                                                             Height="20"
                                                             Margin="0,0,15,0"
                                                             VerticalAlignment="Top"/>

                                                        <StackPanel Grid.Row="0" Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}"
                                                                     FontSize="16"
                                                                     FontWeight="SemiBold"
                                                                     Foreground="White"
                                                                     Margin="0,0,0,10"/>

                                                            <TextBlock Text="Proficiency Level:"
                                                                     Foreground="#AAAAAA"
                                                                     Margin="0,0,0,5"/>
                                                            <ComboBox SelectedItem="{Binding ProficiencyLevel}"
                                                                    Margin="0,0,0,15">
                                                                <ComboBoxItem>Beginner</ComboBoxItem>
                                                                <ComboBoxItem>Elementary</ComboBoxItem>
                                                                <ComboBoxItem>Intermediate</ComboBoxItem>
                                                                <ComboBoxItem>Advanced</ComboBoxItem>
                                                            </ComboBox>

                                                            <TextBlock Text="Daily Practice Goal:"
                                                                     Foreground="#AAAAAA"
                                                                     Margin="0,0,0,5"/>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <Slider Grid.Column="0"
                                                                      Value="{Binding DailyMinutes}"
                                                                      Minimum="5"
                                                                      Maximum="60"
                                                                      TickFrequency="5"
                                                                      Margin="0,0,10,0"/>
                                                                <TextBlock Grid.Column="1"
                                                                         Text="{Binding DailyMinutes, StringFormat='{}{0} min'}"
                                                                         Foreground="White"
                                                                         Width="50"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Voice and Accent Settings -->
                    <Border Background="#33000000"
                          CornerRadius="20"
                          Padding="30"
                          Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="Voice & Accent Settings"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                         Text="Accent Strength:"
                                         VerticalAlignment="Center"
                                         Foreground="White"/>
                                <Slider Grid.Row="0" Grid.Column="1"
                                      Value="{Binding AccentStrength}"
                                      Minimum="0"
                                      Maximum="100"
                                      TickFrequency="25"
                                      Margin="10,0,0,15"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                         Text="Speaking Speed:"
                                         VerticalAlignment="Center"
                                         Foreground="White"/>
                                <ComboBox Grid.Row="1" Grid.Column="1"
                                        SelectedItem="{Binding SpeakingSpeed}"
                                        Margin="10,0,0,15">
                                    <ComboBoxItem>Very Slow</ComboBoxItem>
                                    <ComboBoxItem>Slow</ComboBoxItem>
                                    <ComboBoxItem>Normal</ComboBoxItem>
                                    <ComboBoxItem>Fast</ComboBoxItem>
                                </ComboBox>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                         Text="Pronunciation Help:"
                                         VerticalAlignment="Center"
                                         Foreground="White"/>
                                <CheckBox Grid.Row="2" Grid.Column="1"
                                        Content="Enable phonetic assistance"
                                        IsChecked="{Binding EnablePhoneticHelp}"
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <Grid Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                              Content="Cancel"
                              Command="{Binding CancelCommand}"
                              Padding="20,10"
                              Margin="0,0,10,0"/>

                        <Button Grid.Column="2"
                              Content="Save Settings"
                              Command="{Binding SaveCommand}"
                              Style="{StaticResource AccentButtonStyle}"
                              Padding="20,10">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#9B59B6" Offset="0"/>
                                    <GradientStop Color="#8E44AD" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>