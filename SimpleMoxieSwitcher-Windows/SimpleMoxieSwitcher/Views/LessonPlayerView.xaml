<UserControl x:Class="SimpleMoxieSwitcher.Views.LessonPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#0A0A0A">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!-- Lesson Header -->
            <Border Grid.Row="0" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0">
                        <Button Content="âœ•" FontSize="20" Command="{Binding ExitLessonCommand}"
                              Background="Transparent" BorderThickness="0" Foreground="White" Padding="10"/>
                        <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock Text="{Binding LessonTitle}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding LessonLanguage}" FontSize="12" Foreground="#AAAAAA"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Progress Bar -->
                    <Grid Grid.Column="1" VerticalAlignment="Center" Margin="40,0">
                        <ProgressBar Value="{Binding LessonProgress}" Maximum="100" Height="12"
                                   Background="#333333" Foreground="#00CED1" CornerRadius="6"/>
                        <TextBlock Text="{Binding ProgressText}" HorizontalAlignment="Center"
                                 VerticalAlignment="Center" FontSize="10" Foreground="White"/>
                    </Grid>

                    <!-- Stats -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0">
                        <Border Background="#22FFFFFF" CornerRadius="15" Padding="15,8" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš¡" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding CurrentStreak}" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#22FFFFFF" CornerRadius="15" Padding="15,8" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’Ž" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Points}" Foreground="#FFD700" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Lesson Content -->
            <Grid Grid.Row="1">
                <ContentControl Content="{Binding CurrentExercise}" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ContentControl.Resources>
                        <!-- Multiple Exercise Templates -->
                        <DataTemplate x:Key="MultipleChoiceTemplate">
                            <StackPanel MaxWidth="800">
                                <TextBlock Text="{Binding Question}" FontSize="28" FontWeight="Bold"
                                         Foreground="White" TextAlignment="Center" Margin="0,0,0,40"/>

                                <ItemsControl ItemsSource="{Binding Options}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding DataContext.SelectAnswerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}" Margin="0,10" Padding="20">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{Binding BackgroundColor}" CornerRadius="15"
                                                              BorderBrush="{Binding BorderColor}" BorderThickness="2">
                                                            <TextBlock Text="{Binding Text}" FontSize="18" Foreground="White"
                                                                     HorizontalAlignment="Center" Padding="20,15"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>

                        <DataTemplate x:Key="SpeakingTemplate">
                            <StackPanel MaxWidth="600">
                                <TextBlock Text="Repeat after Moxie:" FontSize="20" Foreground="#AAAAAA"
                                         HorizontalAlignment="Center" Margin="0,0,0,20"/>
                                <Border Background="#22FFFFFF" CornerRadius="20" Padding="30">
                                    <TextBlock Text="{Binding TextToSpeak}" FontSize="32" FontWeight="Bold"
                                             Foreground="White" TextAlignment="Center"/>
                                </Border>
                                <Button Content="ðŸŽ™ï¸ Start Recording" FontSize="20" Padding="20,15"
                                      Command="{Binding RecordCommand}" Margin="0,30,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>

                <!-- Feedback Overlay -->
                <Border Visibility="{Binding ShowFeedback, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="{Binding FeedbackBackground}" CornerRadius="20" Padding="40"
                      HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="{Binding FeedbackEmoji}" FontSize="64" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding FeedbackMessage}" FontSize="24" FontWeight="Bold"
                                 Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Bottom Controls -->
            <Border Grid.Row="2" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0">
                        <Button Content="ðŸ’¡ Hint" Command="{Binding ShowHintCommand}" Padding="15,8" Margin="5,0"/>
                        <Button Content="ðŸ”Š Repeat" Command="{Binding RepeatAudioCommand}" Padding="15,8" Margin="5,0"/>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#22FFFFFF" CornerRadius="20" Padding="20,10">
                        <StackPanel>
                            <TextBlock Text="{Binding QuestionNumber}" FontSize="18" FontWeight="Bold"
                                     Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalQuestions, StringFormat='of {0}'}" FontSize="12"
                                     Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                        <Button Content="Skip" Command="{Binding SkipCommand}" Padding="15,8" Margin="5,0"/>
                        <Button Content="Continue" Command="{Binding ContinueCommand}" Style="{StaticResource AccentButtonStyle}"
                              Padding="20,10" IsEnabled="{Binding CanContinue}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>