<UserControl x:Class="SimpleMoxieSwitcher.Views.GamePlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <Storyboard x:Key="StarAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:2"
                           RepeatBehavior="Forever"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid Background="#0A0A0A">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <!-- Game Header -->
            <Border Grid.Row="0"
                    Background="#1A1A1A"
                    BorderBrush="#333333"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back Button and Title -->
                    <StackPanel Grid.Column="0"
                              Orientation="Horizontal"
                              Margin="20,0">
                        <Button Content="â†"
                              FontSize="20"
                              Command="{Binding ExitGameCommand}"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="White"
                              Padding="10"
                              VerticalAlignment="Center"/>

                        <StackPanel VerticalAlignment="Center"
                                  Margin="10,0,0,0">
                            <TextBlock Text="{Binding GameTitle}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            <TextBlock Text="{Binding GameCategory}"
                                     FontSize="12"
                                     Foreground="#AAAAAA"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Score and Stats -->
                    <StackPanel Grid.Column="1"
                              Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">

                        <!-- Score -->
                        <Border Background="#22FFFFFF"
                              CornerRadius="20"
                              Padding="20,10"
                              Margin="10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ†" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Score: "
                                         Foreground="#AAAAAA"/>
                                <TextBlock Text="{Binding CurrentScore}"
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="#FFD700"/>
                            </StackPanel>
                        </Border>

                        <!-- Level -->
                        <Border Background="#22FFFFFF"
                              CornerRadius="20"
                              Padding="20,10"
                              Margin="10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“ˆ" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Level "
                                         Foreground="#AAAAAA"/>
                                <TextBlock Text="{Binding CurrentLevel}"
                                         FontSize="20"
                                         FontWeight="Bold"
                                         Foreground="#00CED1"/>
                            </StackPanel>
                        </Border>

                        <!-- Lives -->
                        <Border Background="#22FFFFFF"
                              CornerRadius="20"
                              Padding="20,10"
                              Margin="10,0">
                            <ItemsControl ItemsSource="{Binding Lives}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="â¤ï¸" FontSize="20" Margin="2,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>

                    <!-- Game Controls -->
                    <StackPanel Grid.Column="2"
                              Orientation="Horizontal"
                              Margin="20,0">
                        <Button Content="â¸ï¸"
                              FontSize="24"
                              Command="{Binding PauseCommand}"
                              Width="50"
                              Height="50"
                              Background="Transparent"
                              BorderBrush="#666666"
                              Margin="5,0"/>

                        <Button Content="ðŸ”Š"
                              FontSize="24"
                              Command="{Binding ToggleSoundCommand}"
                              Width="50"
                              Height="50"
                              Background="Transparent"
                              BorderBrush="#666666"
                              Margin="5,0"/>

                        <Button Content="âš™ï¸"
                              FontSize="24"
                              Command="{Binding GameSettingsCommand}"
                              Width="50"
                              Height="50"
                              Background="Transparent"
                              BorderBrush="#666666"
                              Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Game Canvas -->
            <Grid Grid.Row="1"
                  Background="#000000">

                <!-- Game Content Host -->
                <ContentControl x:Name="GameHost"
                              Content="{Binding GameContent}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>

                <!-- Game Overlay Messages -->
                <Border Visibility="{Binding ShowOverlayMessage}"
                      Background="#CC000000"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Border Background="#2A2A2A"
                          CornerRadius="20"
                          Padding="40">
                        <StackPanel>
                            <TextBlock Text="{Binding OverlayTitle}"
                                     FontSize="36"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,20"/>

                            <TextBlock Text="{Binding OverlayMessage}"
                                     FontSize="18"
                                     Foreground="#AAAAAA"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"
                                     Margin="0,0,0,30"/>

                            <!-- Star Rating for Victory -->
                            <ItemsControl ItemsSource="{Binding StarRating}"
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding ShowStars, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="â­"
                                                 FontSize="48"
                                                 Margin="5">
                                            <TextBlock.RenderTransform>
                                                <RotateTransform CenterX="24" CenterY="24"/>
                                            </TextBlock.RenderTransform>
                                            <TextBlock.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard Storyboard="{StaticResource StarAnimation}"/>
                                                </EventTrigger>
                                            </TextBlock.Triggers>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Buttons -->
                            <StackPanel Orientation="Horizontal"
                                      HorizontalAlignment="Center"
                                      Margin="0,30,0,0">
                                <Button Content="{Binding PrimaryButtonText}"
                                      Command="{Binding PrimaryButtonCommand}"
                                      Style="{StaticResource AccentButtonStyle}"
                                      Padding="30,15"
                                      FontSize="16"
                                      Margin="0,0,10,0"/>

                                <Button Content="{Binding SecondaryButtonText}"
                                      Command="{Binding SecondaryButtonCommand}"
                                      Padding="30,15"
                                      FontSize="16"
                                      Visibility="{Binding ShowSecondaryButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- Pause Menu -->
                <Border Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}}"
                      Background="#DD000000">
                    <Border Background="#2A2A2A"
                          CornerRadius="20"
                          Width="400"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Padding="30">
                        <StackPanel>
                            <TextBlock Text="Game Paused"
                                     FontSize="28"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,30"/>

                            <Button Content="Resume"
                                  Command="{Binding ResumeCommand}"
                                  HorizontalAlignment="Stretch"
                                  Padding="15"
                                  FontSize="16"
                                  Margin="0,0,0,10"/>

                            <Button Content="Restart"
                                  Command="{Binding RestartCommand}"
                                  HorizontalAlignment="Stretch"
                                  Padding="15"
                                  FontSize="16"
                                  Margin="0,0,0,10"/>

                            <Button Content="Settings"
                                  Command="{Binding GameSettingsCommand}"
                                  HorizontalAlignment="Stretch"
                                  Padding="15"
                                  FontSize="16"
                                  Margin="0,0,0,10"/>

                            <Button Content="Quit to Menu"
                                  Command="{Binding QuitToMenuCommand}"
                                  HorizontalAlignment="Stretch"
                                  Padding="15"
                                  FontSize="16"
                                  Background="#AA4444"/>
                        </StackPanel>
                    </Border>
                </Border>
            </Grid>

            <!-- Game Bottom HUD -->
            <Border Grid.Row="2"
                    Background="#1A1A1A"
                    BorderBrush="#333333"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Progress Bar -->
                    <StackPanel Grid.Column="0"
                              VerticalAlignment="Center"
                              Margin="20,0">
                        <TextBlock Text="{Binding ProgressLabel}"
                                 Foreground="#AAAAAA"
                                 FontSize="12"
                                 Margin="0,0,0,5"/>
                        <ProgressBar Value="{Binding ProgressValue}"
                                   Maximum="100"
                                   Height="8"
                                   Foreground="#00CED1"
                                   Background="#333333"/>
                        <TextBlock Text="{Binding ProgressText}"
                                 Foreground="#AAAAAA"
                                 FontSize="11"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Timer -->
                    <Border Grid.Column="1"
                          Background="#22FFFFFF"
                          CornerRadius="25"
                          Padding="30,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â±ï¸" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding TimeRemaining}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Foreground="{Binding TimerColor}"/>
                        </StackPanel>
                    </Border>

                    <!-- Power-ups / Bonuses -->
                    <StackPanel Grid.Column="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="20,0">
                        <TextBlock Text="Power-ups:"
                                 Foreground="#AAAAAA"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>

                        <ItemsControl ItemsSource="{Binding ActivePowerUps}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Color}"
                                          CornerRadius="20"
                                          Width="40"
                                          Height="40"
                                          Margin="5,0">
                                        <TextBlock Text="{Binding Icon}"
                                                 FontSize="20"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Achievement Popup -->
        <Border x:Name="AchievementPopup"
              Visibility="{Binding ShowAchievement, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="#EE2A2A2A"
              CornerRadius="10"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="20"
              Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ…" FontSize="32" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="Achievement Unlocked!"
                             FontSize="14"
                             FontWeight="Bold"
                             Foreground="#FFD700"/>
                    <TextBlock Text="{Binding AchievementName}"
                             FontSize="16"
                             Foreground="White"/>
                    <TextBlock Text="{Binding AchievementDescription}"
                             FontSize="12"
                             Foreground="#AAAAAA"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>