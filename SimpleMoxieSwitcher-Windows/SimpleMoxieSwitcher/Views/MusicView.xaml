<UserControl x:Class="SimpleMoxieSwitcher.Views.MusicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#0A0A0A">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A0033" Offset="0"/>
                <GradientStop Color="#330066" Offset="0.5"/>
                <GradientStop Color="#1A0033" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="#1A000000" BorderBrush="#333333" BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Music Library" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                            <!-- Categories -->
                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton GroupName="Category" IsChecked="{Binding IsSelected}"
                                                   Margin="0,5" Foreground="White">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </RadioButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Separator Background="#333333" Margin="0,20"/>

                            <!-- Playlists -->
                            <TextBlock Text="Playlists" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>
                            <ItemsControl ItemsSource="{Binding Playlists}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.SelectPlaylistCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}" Background="Transparent" BorderThickness="0"
                                              HorizontalAlignment="Left" Padding="10,5" Margin="0,2">
                                            <TextBlock Text="{Binding Name}" Foreground="#AAAAAA"/>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Song List -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Now Playing Header -->
                    <Border Grid.Row="0" Background="#22000000" Padding="30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Album Art -->
                            <Border Grid.Column="0" Width="120" Height="120" CornerRadius="10"
                                  Background="{Binding AlbumArtBackground}" Margin="0,0,30,0">
                                <TextBlock Text="ðŸŽµ" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Song Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding NowPlayingTitle}" FontSize="28" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding NowPlayingArtist}" FontSize="16" Foreground="#AAAAAA" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding NowPlayingAlbum}" FontSize="14" Foreground="#666666" Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- Visualizer -->
                            <ItemsControl Grid.Column="2" ItemsSource="{Binding VisualizerBars}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="4" Height="{Binding Height}" Background="#00CED1"
                                              VerticalAlignment="Bottom" Margin="2,0" CornerRadius="2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <!-- Song List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Songs}" Margin="20">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.PlaySongCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding}" Background="Transparent" BorderThickness="0"
                                          HorizontalAlignment="Stretch" Padding="10" Margin="0,2">
                                        <Border Background="{Binding BackgroundColor}" CornerRadius="10" Padding="15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding TrackNumber}" Foreground="#666666"
                                                         VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="1" Margin="15,0">
                                                    <TextBlock Text="{Binding Title}" FontSize="16" Foreground="White"/>
                                                    <TextBlock Text="{Binding Artist}" FontSize="12" Foreground="#AAAAAA"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                                                    <Button Content="â¤ï¸" Command="{Binding DataContext.FavoriteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Padding="5"/>
                                                    <Button Content="â‹®" Command="{Binding DataContext.ShowOptionsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Padding="5"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="3" Text="{Binding Duration}" Foreground="#666666"
                                                         VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <!-- Player Controls -->
            <Border Grid.Row="1" Background="#1A000000" BorderBrush="#333333" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress Bar -->
                    <Grid Grid.Row="0" Margin="30,20,30,0">
                        <ProgressBar Value="{Binding PlaybackProgress}" Maximum="100" Height="4"
                                   Background="#333333" Foreground="#00CED1"/>
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="{Binding CurrentTime}" HorizontalAlignment="Left" Foreground="#AAAAAA" FontSize="12"/>
                            <TextBlock Text="{Binding TotalTime}" HorizontalAlignment="Right" Foreground="#AAAAAA" FontSize="12"/>
                        </Grid>
                    </Grid>

                    <!-- Main Controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Content="ðŸ”€" Command="{Binding ShuffleCommand}" FontSize="20" Width="50" Height="50"
                              Background="Transparent" BorderBrush="{Binding ShuffleBorder}" Margin="10,0"/>

                        <Button Content="â®ï¸" Command="{Binding PreviousCommand}" FontSize="24" Width="60" Height="60"
                              Background="Transparent" BorderThickness="0" Margin="10,0"/>

                        <Button Command="{Binding PlayPauseCommand}" Width="80" Height="80" Margin="10,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Ellipse Fill="#00CED1"/>
                                        <TextBlock Text="{Binding PlayPauseIcon}" FontSize="32" Foreground="White"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="â­ï¸" Command="{Binding NextCommand}" FontSize="24" Width="60" Height="60"
                              Background="Transparent" BorderThickness="0" Margin="10,0"/>

                        <Button Content="ðŸ”" Command="{Binding RepeatCommand}" FontSize="20" Width="50" Height="50"
                              Background="Transparent" BorderBrush="{Binding RepeatBorder}" Margin="10,0"/>
                    </StackPanel>

                    <!-- Volume Control -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="30,0,30,20">
                        <TextBlock Text="ðŸ”Š" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider Value="{Binding Volume}" Minimum="0" Maximum="100" Width="150" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>