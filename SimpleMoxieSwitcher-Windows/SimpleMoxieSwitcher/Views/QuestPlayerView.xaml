<UserControl x:Class="SimpleMoxieSwitcher.Views.QuestPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#0A0F1A">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A0F1A" Offset="0"/>
                <GradientStop Color="#1A2F4A" Offset="0.5"/>
                <GradientStop Color="#0A1A2A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <!-- Quest Header -->
            <Border Grid.Row="0" Background="#1A000000" BorderBrush="#333333" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quest Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="30,0">
                        <Border Width="60" Height="60" CornerRadius="30" Background="#FFD700">
                            <TextBlock Text="{Binding QuestIcon}" FontSize="28"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding QuestTitle}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding QuestChapter}" FontSize="14" Foreground="#AAAAAA"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Quest Progress -->
                    <Grid Grid.Column="1" VerticalAlignment="Center" MaxWidth="500">
                        <ProgressBar Value="{Binding QuestProgress}" Maximum="100" Height="20"
                                   Background="#333333" Foreground="#FFD700" CornerRadius="10"/>
                        <TextBlock Text="{Binding QuestProgressText}" HorizontalAlignment="Center"
                                 VerticalAlignment="Center" Foreground="Black" FontWeight="Bold"/>
                    </Grid>

                    <!-- Quest Stats -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="30,0">
                        <Border Background="#22FFFFFF" CornerRadius="15" Padding="15,8" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â­" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding StarsCollected}" Foreground="#FFD700" FontWeight="Bold"/>
                                <TextBlock Text="/3" Foreground="#666666"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#22FFFFFF" CornerRadius="15" Padding="15,8" Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’Ž" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding GemsCollected}" Foreground="#00CED1" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Quest Content Area -->
            <Grid Grid.Row="1">
                <!-- Quest Scene/Story -->
                <Border Background="#0A000000" CornerRadius="20" Margin="50">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Scene Display -->
                        <Border Grid.Row="0" Background="#050505" CornerRadius="20,20,0,0">
                            <Grid>
                                <!-- Scene Image/Animation -->
                                <Image Source="{Binding SceneImage}" Stretch="UniformToFill" Opacity="0.7"/>

                                <!-- Character Overlay -->
                                <Canvas>
                                    <Image Source="{Binding CharacterImage}" Width="200" Height="200"
                                         Canvas.Left="{Binding CharacterX}" Canvas.Top="{Binding CharacterY}"/>
                                </Canvas>

                                <!-- Dialog Box -->
                                <Border Background="#DD000000" CornerRadius="15" Padding="30"
                                      VerticalAlignment="Bottom" Margin="40"
                                      Visibility="{Binding ShowDialog, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                            <Border Width="50" Height="50" CornerRadius="25"
                                                  Background="{Binding SpeakerColor}" Margin="0,0,15,0">
                                                <TextBlock Text="{Binding SpeakerEmoji}" FontSize="24"
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="{Binding SpeakerName}" FontSize="18"
                                                     FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1" Text="{Binding DialogText}" FontSize="16"
                                                 Foreground="White" TextWrapping="Wrap"/>
                                    </Grid>
                                </Border>

                                <!-- Quest Objective -->
                                <Border Background="#AA2ECC71" CornerRadius="10" Padding="15"
                                      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">
                                    <StackPanel>
                                        <TextBlock Text="Current Objective" FontSize="12" FontWeight="Bold" Foreground="Black"/>
                                        <TextBlock Text="{Binding CurrentObjective}" FontSize="14" Foreground="Black"
                                                 FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Choice Panel -->
                        <Border Grid.Row="1" Background="#1A000000" CornerRadius="0,0,20,20" Padding="30"
                              Visibility="{Binding ShowChoices, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="What will you do?" FontSize="18" FontWeight="Bold"
                                         Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                                <ItemsControl ItemsSource="{Binding Choices}" HorizontalAlignment="Center">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding DataContext.SelectChoiceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}" Margin="10">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="#22FFFFFF" BorderBrush="#666666"
                                                              BorderThickness="2" CornerRadius="15" Padding="20,15">
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding Icon}" FontSize="32"
                                                                         HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                                <TextBlock Text="{Binding Text}" FontSize="14"
                                                                         Foreground="White" TextAlignment="Center"
                                                                         MaxWidth="150" TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Quest Controls & Inventory -->
            <Border Grid.Row="2" Background="#1A000000" BorderBrush="#333333" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Inventory -->
                    <StackPanel Grid.Column="0" Margin="30,0">
                        <TextBlock Text="Inventory" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding InventoryItems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="60" Height="60" Background="#22FFFFFF"
                                          CornerRadius="10" Margin="5,0">
                                        <Grid>
                                            <TextBlock Text="{Binding Icon}" FontSize="24"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Count}" FontSize="12" FontWeight="Bold"
                                                     Foreground="White" HorizontalAlignment="Right"
                                                     VerticalAlignment="Bottom" Margin="5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="Continue" Command="{Binding ContinueCommand}"
                              Style="{StaticResource AccentButtonStyle}" Padding="30,15" FontSize="18"
                              Visibility="{Binding CanContinue, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Button Content="âš™ï¸ Menu" Command="{Binding ShowMenuCommand}"
                              Width="60" Height="60" FontSize="24" Margin="20,0,0,0"
                              Background="Transparent" BorderBrush="#666666"/>
                    </StackPanel>

                    <!-- Quest Info -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" Margin="30,0">
                        <TextBlock Text="Quest Log" Foreground="#AAAAAA" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“œ" FontSize="16" Margin="0,0,10,0"/>
                            <StackPanel>
                                <TextBlock Text="{Binding CompletedObjectives}" Foreground="#2ECC71" FontWeight="Bold"/>
                                <TextBlock Text="Completed" FontSize="11" Foreground="#AAAAAA"/>
                            </StackPanel>
                            <StackPanel Margin="20,0,0,0">
                                <TextBlock Text="{Binding TimeElapsed}" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="Time" FontSize="11" Foreground="#AAAAAA"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>