<UserControl x:Class="SimpleMoxieSwitcher.Views.KnowledgeGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <Storyboard x:Key="NodePulse">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.7" To="1" Duration="0:0:1.5"
                           RepeatBehavior="Forever" AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid Background="#0A0A0A">
        <!-- Background with animated gradient -->
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.5">
                <GradientStop Color="#1A1A3A" Offset="0"/>
                <GradientStop Color="#0A0A0A" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Control Bar -->
            <Border Grid.Row="0"
                    Background="#1A000000"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title and Stats -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Knowledge Graph"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="White"/>
                        <StackPanel Orientation="Horizontal"
                                  Margin="0,5,0,0">
                            <TextBlock Text="{Binding NodeCount}"
                                     Foreground="#00CED1"
                                     FontWeight="Bold"/>
                            <TextBlock Text=" nodes â€¢ "
                                     Foreground="#666666"/>
                            <TextBlock Text="{Binding ConnectionCount}"
                                     Foreground="#00CED1"
                                     FontWeight="Bold"/>
                            <TextBlock Text=" connections â€¢ "
                                     Foreground="#666666"/>
                            <TextBlock Text="{Binding LastUpdated}"
                                     Foreground="#AAAAAA"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Search Box -->
                    <Border Grid.Column="1"
                          Background="#22FFFFFF"
                          CornerRadius="20"
                          MaxWidth="400"
                          HorizontalAlignment="Center"
                          Margin="20,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                     Text="ðŸ”"
                                     VerticalAlignment="Center"
                                     Margin="15,0,10,0"/>

                            <TextBox Grid.Column="1"
                                   Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,10"/>
                        </Grid>
                    </Border>

                    <!-- View Controls -->
                    <StackPanel Grid.Column="2"
                              Orientation="Horizontal">
                        <Button Content="2D"
                              IsEnabled="{Binding Is3DView}"
                              Command="{Binding Toggle2DCommand}"
                              Width="40"
                              Padding="8,5"
                              Margin="5,0"/>

                        <Button Content="3D"
                              IsEnabled="{Binding Is2DView}"
                              Command="{Binding Toggle3DCommand}"
                              Width="40"
                              Padding="8,5"
                              Margin="5,0"/>

                        <Separator Width="1"
                                 Background="#666666"
                                 Margin="10,0"/>

                        <Button Content="ðŸ”„"
                              ToolTip="Reset View"
                              Command="{Binding ResetViewCommand}"
                              Width="40"
                              Height="40"
                              Background="Transparent"
                              BorderBrush="#666666"/>

                        <Button Content="ðŸ“·"
                              ToolTip="Export Image"
                              Command="{Binding ExportImageCommand}"
                              Width="40"
                              Height="40"
                              Background="Transparent"
                              BorderBrush="#666666"
                              Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Graph Canvas -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Categories -->
                <Border Grid.Column="0"
                      Background="#1A000000"
                      BorderBrush="#333333"
                      BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="15">
                            <TextBlock Text="Categories"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,15"/>

                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsVisible}"
                                                Margin="0,5">
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="12"
                                                       Height="12"
                                                       Fill="{Binding Color}"
                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name}"
                                                         Foreground="White"/>
                                                <TextBlock Text="{Binding Count, StringFormat=' ({0})'}"
                                                         Foreground="#666666"/>
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Separator Background="#333333"
                                     Margin="0,20,0,15"/>

                            <TextBlock Text="Filters"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Connection Strength"
                                     Foreground="#AAAAAA"
                                     Margin="0,0,0,5"/>
                            <Slider Value="{Binding ConnectionStrengthFilter}"
                                  Minimum="0"
                                  Maximum="100"
                                  TickFrequency="25"
                                  TickPlacement="BottomRight"
                                  Margin="0,0,0,15"/>

                            <TextBlock Text="Node Importance"
                                     Foreground="#AAAAAA"
                                     Margin="0,0,0,5"/>
                            <Slider Value="{Binding NodeImportanceFilter}"
                                  Minimum="0"
                                  Maximum="100"
                                  TickFrequency="25"
                                  TickPlacement="BottomRight"
                                  Margin="0,0,0,15"/>

                            <CheckBox Content="Show labels"
                                    IsChecked="{Binding ShowLabels}"
                                    Foreground="White"
                                    Margin="0,0,0,10"/>

                            <CheckBox Content="Show connections"
                                    IsChecked="{Binding ShowConnections}"
                                    Foreground="White"
                                    Margin="0,0,0,10"/>

                            <CheckBox Content="Animate"
                                    IsChecked="{Binding AnimateGraph}"
                                    Foreground="White"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Center - Graph Visualization -->
                <Grid Grid.Column="1"
                      Background="#050505">

                    <!-- Canvas for Graph -->
                    <Canvas x:Name="GraphCanvas"
                          ClipToBounds="True">
                        <Canvas.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="{Binding ZoomLevel}"
                                              ScaleY="{Binding ZoomLevel}"
                                              CenterX="{Binding CenterX}"
                                              CenterY="{Binding CenterY}"/>
                                <TranslateTransform X="{Binding PanX}"
                                                  Y="{Binding PanY}"/>
                            </TransformGroup>
                        </Canvas.RenderTransform>

                        <!-- Connections/Edges -->
                        <ItemsControl ItemsSource="{Binding Connections}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Line X1="{Binding StartX}"
                                        Y1="{Binding StartY}"
                                        X2="{Binding EndX}"
                                        Y2="{Binding EndY}"
                                        Stroke="{Binding Color}"
                                        StrokeThickness="{Binding Thickness}"
                                        Opacity="{Binding Opacity}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Nodes -->
                        <ItemsControl ItemsSource="{Binding Nodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Canvas.Left="{Binding X}"
                                          Canvas.Top="{Binding Y}"
                                          Command="{Binding DataContext.SelectNodeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding}"
                                          Background="Transparent"
                                          BorderThickness="0">
                                        <Grid>
                                            <Ellipse Width="{Binding Size}"
                                                   Height="{Binding Size}"
                                                   Fill="{Binding Color}"
                                                   Stroke="{Binding BorderColor}"
                                                   StrokeThickness="2">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="{Binding GlowColor}"
                                                                    BlurRadius="10"
                                                                    ShadowDepth="0"/>
                                                </Ellipse.Effect>
                                                <Ellipse.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard Storyboard="{StaticResource NodePulse}"/>
                                                    </EventTrigger>
                                                </Ellipse.Triggers>
                                            </Ellipse>

                                            <TextBlock Text="{Binding Label}"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Foreground="White"
                                                     FontSize="{Binding LabelSize}"
                                                     FontWeight="SemiBold"
                                                     Visibility="{Binding ShowLabel, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>

                    <!-- Zoom Controls -->
                    <StackPanel HorizontalAlignment="Right"
                              VerticalAlignment="Bottom"
                              Margin="20">
                        <Button Content="+"
                              Command="{Binding ZoomInCommand}"
                              Width="40"
                              Height="40"
                              FontSize="20"
                              Margin="0,0,0,5"/>

                        <TextBlock Text="{Binding ZoomPercentage}"
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,5"/>

                        <Button Content="âˆ’"
                              Command="{Binding ZoomOutCommand}"
                              Width="40"
                              Height="40"
                              FontSize="20"/>
                    </StackPanel>

                    <!-- Mini Map -->
                    <Border HorizontalAlignment="Left"
                          VerticalAlignment="Bottom"
                          Width="150"
                          Height="150"
                          Background="#AA000000"
                          BorderBrush="#666666"
                          BorderThickness="1"
                          CornerRadius="5"
                          Margin="20">
                        <Canvas x:Name="MiniMap">
                            <!-- Simplified graph representation -->
                        </Canvas>
                    </Border>
                </Grid>

                <!-- Right Panel - Node Details -->
                <Border Grid.Column="2"
                      Background="#1A000000"
                      BorderBrush="#333333"
                      BorderThickness="1,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20"
                                  Visibility="{Binding HasSelectedNode, Converter={StaticResource BoolToVisibilityConverter}}">

                            <!-- Selected Node Info -->
                            <Border Background="#22FFFFFF"
                                  CornerRadius="10"
                                  Padding="15"
                                  Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedNodeName}"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             Foreground="White"
                                             Margin="0,0,0,10"/>

                                    <TextBlock Text="{Binding SelectedNodeCategory}"
                                             FontSize="12"
                                             Foreground="{Binding SelectedNodeCategoryColor}"
                                             Margin="0,0,0,10"/>

                                    <TextBlock Text="{Binding SelectedNodeDescription}"
                                             TextWrapping="Wrap"
                                             Foreground="#AAAAAA"
                                             Margin="0,0,0,15"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                 Text="Created:"
                                                 Foreground="#666666"
                                                 Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                 Text="{Binding SelectedNodeCreated}"
                                                 Foreground="White"
                                                 Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                 Text="Weight:"
                                                 Foreground="#666666"
                                                 Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                 Text="{Binding SelectedNodeWeight}"
                                                 Foreground="White"
                                                 Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                 Text="Connections:"
                                                 Foreground="#666666"
                                                 Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1"
                                                 Text="{Binding SelectedNodeConnections}"
                                                 Foreground="White"
                                                 Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                 Text="Importance:"
                                                 Foreground="#666666"
                                                 Margin="0,0,10,0"/>
                                        <ProgressBar Grid.Row="3" Grid.Column="1"
                                                   Value="{Binding SelectedNodeImportance}"
                                                   Maximum="100"
                                                   Height="8"
                                                   Foreground="#00CED1"
                                                   Background="#333333"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Connected Nodes -->
                            <TextBlock Text="Connected To"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,0,0,10"/>

                            <ItemsControl ItemsSource="{Binding ConnectedNodes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.SelectNodeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              HorizontalAlignment="Stretch"
                                              HorizontalContentAlignment="Left"
                                              Background="#11FFFFFF"
                                              BorderThickness="0"
                                              Padding="10"
                                              Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Grid.Column="0"
                                                       Width="8"
                                                       Height="8"
                                                       Fill="{Binding Color}"
                                                       Margin="0,0,10,0"/>

                                                <TextBlock Grid.Column="1"
                                                         Text="{Binding Name}"
                                                         Foreground="White"/>

                                                <TextBlock Grid.Column="2"
                                                         Text="{Binding ConnectionStrength, StringFormat='{}{0}%'}"
                                                         Foreground="#666666"/>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Actions -->
                            <StackPanel Margin="0,20,0,0">
                                <Button Content="Focus on Node"
                                      Command="{Binding FocusNodeCommand}"
                                      HorizontalAlignment="Stretch"
                                      Padding="10"
                                      Margin="0,0,0,10"/>

                                <Button Content="Show Path To..."
                                      Command="{Binding ShowPathCommand}"
                                      HorizontalAlignment="Stretch"
                                      Padding="10"
                                      Margin="0,0,0,10"/>

                                <Button Content="Hide Node"
                                      Command="{Binding HideNodeCommand}"
                                      HorizontalAlignment="Stretch"
                                      Padding="10"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Empty State -->
                        <StackPanel Margin="20"
                                  Visibility="{Binding NoNodeSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="No Node Selected"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#666666"
                                     HorizontalAlignment="Center"
                                     Margin="0,50,0,10"/>
                            <TextBlock Text="Click on any node to view details"
                                     FontSize="12"
                                     Foreground="#666666"
                                     HorizontalAlignment="Center"
                                     TextAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Bottom Status Bar -->
            <Border Grid.Row="2"
                    Background="#1A000000"
                    BorderBrush="#333333"
                    BorderThickness="0,1,0,0"
                    Padding="20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Layout Algorithm -->
                    <StackPanel Grid.Column="0"
                              Orientation="Horizontal">
                        <TextBlock Text="Layout:"
                                 Foreground="#666666"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>

                        <ComboBox SelectedItem="{Binding LayoutAlgorithm}"
                                Width="150"
                                VerticalAlignment="Center">
                            <ComboBoxItem>Force Directed</ComboBoxItem>
                            <ComboBoxItem>Hierarchical</ComboBoxItem>
                            <ComboBoxItem>Circular</ComboBoxItem>
                            <ComboBoxItem>Grid</ComboBoxItem>
                        </ComboBox>

                        <Button Content="Apply"
                              Command="{Binding ApplyLayoutCommand}"
                              Padding="10,5"
                              Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Export Options -->
                    <StackPanel Grid.Column="1"
                              Orientation="Horizontal">
                        <Button Content="Export Data"
                              Command="{Binding ExportDataCommand}"
                              Padding="10,5"
                              Margin="5,0"/>

                        <Button Content="Import Data"
                              Command="{Binding ImportDataCommand}"
                              Padding="10,5"
                              Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>