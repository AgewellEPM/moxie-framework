{
  "AppSettings": {
    "MoxieEndpoint": "http://localhost:8003/hive/endpoint/",
    "MqttHost": "localhost",
    "MqttPort": 8883,
    "MqttUseSsl": true,
    "DockerContainerName": "openmoxie-server",
    "DockerImage": "embodied/openmoxie:latest",
    "DefaultAIProvider": "openai",
    "DefaultAIModel": "gpt-3.5-turbo",
    "ContentFilterLevel": "strict",
    "MaxConversationHistory": 50,
    "AutoStartDocker": true,
    "EnableTelemetry": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "File": {
      "Path": "Logs/app-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7
    }
  },
  "Features": {
    "EnableCustomPersonalities": true,
    "EnableSmartHome": true,
    "EnablePuppetMode": true,
    "EnableGames": true,
    "EnableLanguageLearning": true,
    "EnableStoryTime": true,
    "EnableMusic": true,
    "MaxChildProfiles": 5,
    "RequireParentPin": true
  },
  "Safety": {
    "ContentFilterEnabled": true,
    "BlockedWords": [],
    "MaxSessionDuration": 60,
    "RequireParentApprovalForNewContent": false,
    "LogAllConversations": true,
    "AlertOnSafetyViolation": true
  },
  "Localization": {
    "DefaultLanguage": "en",
    "SupportedLanguages": [
      "en", "es", "fr", "de", "it", "pt", "ru", "ja", "ko", "zh"
    ]
  }
}