<Application x:Class="SimpleMoxieSwitcher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- App-wide colors -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#CC000000"/>
            <SolidColorBrush x:Key="AppAccentBrush" Color="#FF00D4FF"/>
            <SolidColorBrush x:Key="AppSecondaryBrush" Color="#FF00FF88"/>

            <!-- Gradient brushes -->
            <LinearGradientBrush x:Key="AppGradientBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF00FF88" Offset="0"/>
                <GradientStop Color="#FF00D4FF" Offset="0.5"/>
                <GradientStop Color="#FF0080FF" Offset="1"/>
            </LinearGradientBrush>

            <!-- Text styles -->
            <Style x:Key="AppTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style x:Key="AppSubtitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="#B3FFFFFF"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>